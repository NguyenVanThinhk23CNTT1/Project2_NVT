@{
    ViewData["Title"] = "Trang chủ";
    var isAdmin = (bool)(ViewData["IsAdmin"] ?? false);
}

<div class="container py-5">
    <div class="row align-items-center mb-5">
        <div class="col-md-7">
            <h1 class="mb-3">Chào mừng đến với Cinema</h1>
            <p class="text-muted mb-4">Đặt vé xem phim nhanh chóng, xem lịch chiếu và khuyến mãi mới nhất.</p>
            <div class="d-flex gap-2">
                <a asp-controller="Movies" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-film me-2"></i>Khám phá phim
                </a>
                <a asp-controller="Showtimes" asp-action="Index" class="btn btn-outline-primary">
                    <i class="fas fa-calendar-alt me-2"></i>Xem lịch chiếu
                </a>
                @if (isAdmin)
                {
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-warning">
                        <i class="fas fa-gauge-high me-2"></i>Vào Admin Dashboard
                    </a>
                }
            </div>
        </div>
        <div class="col-md-5 text-center">
            <i class="fas fa-clapperboard fa-8x text-primary opacity-25"></i>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-12">
            <div class="card-dashboard p-4">
                <h5 class="mb-3"><i class="fas fa-bolt me-2 text-primary"></i>Thao tác nhanh</h5>
                <div class="d-flex gap-2">
                    <a asp-controller="Movies" asp-action="Index" class="btn btn-outline-secondary">Phim đang chiếu</a>
                    <a asp-controller="Theaters" asp-action="Index" class="btn btn-outline-secondary">Hệ thống rạp</a>
                </div>
                <div class="mt-3 small text-muted">
                    <!-- Demo nút giả lập đăng nhập admin qua cookie đơn giản (không dùng auth) -->
                    <form asp-controller="Home" asp-action="LoginAsAdmin" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-outline-dark">Đặt cookie Admin (demo)</button>
                    </form>
                    <form asp-controller="Home" asp-action="Logout" method="post" class="d-inline ms-2">
                        <button type="submit" class="btn btn-sm btn-outline-dark">Xóa cookie</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 