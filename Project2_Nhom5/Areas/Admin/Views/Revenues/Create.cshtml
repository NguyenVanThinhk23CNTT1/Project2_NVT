@model Project2_Nhom5.Models.Revenue

@{
    ViewData["Title"] = "Thêm Báo cáo Doanh thu Mới";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-plus-circle me-2 text-success"></i>Thêm Báo cáo Doanh thu Mới
        </h2>
        <p class="text-muted mb-0">Tạo báo cáo doanh thu mới cho lịch chiếu</p>
    </div>
    <a asp-action="Index" class="admin-btn-secondary">
        <i class="fas fa-arrow-left"></i>Quay lại danh sách
    </a>
</div>

<div class="card-dashboard">
    <div class="card-body p-4">
        <form asp-action="Create" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <div class="col-md-6">
                <label asp-for="ShowtimeId" class="form-label">
                    <i class="fas fa-film"></i>Lịch chiếu <span class="text-danger">*</span>
                </label>
                <select asp-for="ShowtimeId" class="form-select" asp-items="ViewBag.ShowtimeId">
                    <option value="">Chọn lịch chiếu...</option>
                </select>
                <span asp-validation-for="ShowtimeId" class="text-danger small"></span>
                <div class="form-text">Chọn lịch chiếu để tạo báo cáo doanh thu</div>
            </div>
            
            <div class="col-md-6">
                <label asp-for="TotalAmount" class="form-label">
                    <i class="fas fa-dollar-sign"></i>Tổng doanh thu <span class="text-danger">*</span>
                </label>
                <div class="input-group">
                    <input asp-for="TotalAmount" class="form-control" type="number" min="0" step="1000" placeholder="Nhập tổng doanh thu..." />
                    <span class="input-group-text">VNĐ</span>
                </div>
                <span asp-validation-for="TotalAmount" class="text-danger small"></span>
                <div class="form-text">Nhập tổng doanh thu từ lịch chiếu này</div>
            </div>
            
            <div class="col-md-6">
                <label asp-for="AgencyCommission" class="form-label">
                    <i class="fas fa-percent"></i>Hoa hồng đại lý (%) <span class="text-danger">*</span>
                </label>
                <div class="input-group">
                    <input asp-for="AgencyCommission" class="form-control" type="number" min="0" max="100" step="0.1" placeholder="Nhập phần trăm hoa hồng..." />
                    <span class="input-group-text">%</span>
                </div>
                <span asp-validation-for="AgencyCommission" class="text-danger small"></span>
                <div class="form-text">Nhập phần trăm hoa hồng cho đại lý (0-100%)</div>
            </div>
            
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="fas fa-info-circle me-2 text-success"></i>Hướng dẫn tạo báo cáo doanh thu
                        </h6>
                        <ul class="mb-0">
                            <li>Chọn lịch chiếu đã hoàn thành để tạo báo cáo</li>
                            <li>Nhập tổng doanh thu chính xác từ lịch chiếu</li>
                            <li>Đặt hoa hồng đại lý phù hợp với hợp đồng</li>
                            <li>Hệ thống sẽ tự động tính doanh thu thực tế</li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <div class="col-12">
                <hr class="my-4">
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="admin-btn-secondary">
                        <i class="fas fa-times"></i>Hủy bỏ
                    </a>
                    <button type="submit" class="admin-btn-success">
                        <i class="fas fa-save"></i>Tạo báo cáo
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Form submission with beautiful dialog
            $('form').on('submit', async function(e) {
                e.preventDefault();
                
                const formData = new FormData(this);
                const showtimeId = formData.get('ShowtimeId');
                const totalAmount = formData.get('TotalAmount');
                const agencyCommission = formData.get('AgencyCommission');
                
                // Validation
                if (!showtimeId || !totalAmount || !agencyCommission) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi!',
                        text: 'Vui lòng điền đầy đủ thông tin bắt buộc',
                        confirmButtonText: 'Đóng',
                        confirmButtonColor: '#dc3545'
                    });
                    return;
                }
                
                // Validate total amount
                if (parseFloat(totalAmount) % 1000 !== 0) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi!',
                        text: 'Tổng doanh thu phải là bội số của 1000 VNĐ',
                        confirmButtonText: 'Đóng',
                        confirmButtonColor: '#dc3545'
                    });
                    return;
                }
                
                // Validate commission
                if (parseFloat(agencyCommission) < 0 || parseFloat(agencyCommission) > 100) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi!',
                        text: 'Hoa hồng đại lý phải từ 0% đến 100%',
                        confirmButtonText: 'Đóng',
                        confirmButtonColor: '#dc3545'
                    });
                    return;
                }
                
                // Show loading
                Swal.fire({
                    title: 'Đang tạo báo cáo doanh thu...',
                    allowOutsideClick: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });
                
                try {
                    const response = await fetch('@Url.Action("Create", "Revenues", new { area = "Admin" })', {
                        method: 'POST',
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: formData
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        Swal.fire({
                            html: `
                                <div class="mt-3 text-center">
                                    <lord-icon src="https://cdn.lordicon.com/lupuorrc.json" trigger="loop" colors="primary:#0ab39c,secondary:#405189" style="width:120px;height:120px">
                                    </lord-icon>
                                    <div class="mt-4 pt-2 fs-15">
                                        <h4 style="color: #333; font-weight: 600; margin-bottom: 8px;">Thành công!</h4>
                                        <p style="color: #666; margin: 0;">${result.message}</p>
                                    </div>
                                </div>
                            `,
                            showConfirmButton: true,
                            confirmButtonText: 'Ok',
                            confirmButtonColor: '#0ab39c',
                            allowOutsideClick: true,
                            allowEscapeKey: true,
                            customClass: {
                                popup: 'swal2-custom-popup',
                                confirmButton: 'btn btn-primary w-xs mb-1'
                            },
                            background: '#fff',
                            backdrop: 'rgba(0,0,0,0.4)'
                        }).then(() => {
                            window.location.href = '@Url.Action("Index", "Revenues", new { area = "Admin" })';
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Lỗi!',
                            text: result.message,
                            confirmButtonText: 'Đóng',
                            confirmButtonColor: '#dc3545'
                        });
                    }
                } catch (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi!',
                        text: 'Có lỗi xảy ra khi tạo báo cáo doanh thu',
                        confirmButtonText: 'Đóng',
                        confirmButtonColor: '#dc3545'
                    });
                }
            });
        });
    </script>
}



