@model IEnumerable<Project2_Nhom5.Models.Seat>

@{
    ViewData["Title"] = "Quản lý Ghế ngồi";
    var searchTerm = ViewBag.Search?.ToString() ?? "";
    var sortOrder = ViewBag.SortOrder?.ToString() ?? "";
    var currentSort = ViewBag.CurrentSort?.ToString() ?? "";
    var page = ViewBag.CurrentPage?.ToString() ?? "1";
    var pageSize = ViewBag.PageSize?.ToString() ?? "10";
    var theaterIdFilter = ViewBag.TheaterId?.ToString() ?? "";
    var seatTypeFilter = ViewBag.SeatType?.ToString() ?? "";
    var totalCount = ViewBag.TotalCount ?? 0;
    var totalPages = ViewBag.TotalPages ?? 1;
    var currentPageInt = int.Parse(page);
    var pageSizeInt = int.Parse(pageSize);
    var startItem = ((currentPageInt - 1) * pageSizeInt) + 1;
    var endItem = Math.Min(currentPageInt * pageSizeInt, totalCount);
    var theaters = ViewBag.Theaters as List<Project2_Nhom5.Models.Theater> ?? new List<Project2_Nhom5.Models.Theater>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-chair me-2 text-primary"></i>Quản lý Ghế ngồi
        </h2>
        <p class="text-muted mb-0">Danh sách tất cả ghế ngồi trong hệ thống</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Create" class="admin-btn-primary">
            <i class="fas fa-plus"></i>Thêm ghế mới
        </a>
        <a asp-action="BulkCreate" class="admin-btn-success">
            <i class="fas fa-layer-group"></i>Thêm hàng loạt
        </a>
    </div>
</div>

<!-- Search and Filter Section -->
<div class="card-dashboard mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">
                    <i class="fas fa-search"></i>Tìm kiếm
                </label>
                <input type="text" name="search" class="form-control" placeholder="Tìm theo mã ghế, loại ghế, rạp..." value="@searchTerm">
            </div>
            <div class="col-md-3">
                <label class="form-label">
                    <i class="fas fa-building"></i>Rạp chiếu
                </label>
                <select name="theaterId" class="form-select">
                    <option value="">Tất cả rạp</option>
                    @foreach (var theater in theaters)
                    {
                        if (theaterIdFilter == theater.TheaterId.ToString())
                        {
                            <option value="@theater.TheaterId" selected>@theater.Name</option>
                        }
                        else
                        {
                            <option value="@theater.TheaterId">@theater.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">
                    <i class="fas fa-tag"></i>Loại ghế
                </label>
                <select name="seatType" class="form-select">
                    <option value="">Tất cả loại</option>
                    @if (seatTypeFilter == "vip")
                    {
                        <option value="vip" selected>VIP</option>
                    }
                    else
                    {
                        <option value="vip">VIP</option>
                    }
                    @if (seatTypeFilter == "thuong")
                    {
                        <option value="thuong" selected>Thường</option>
                    }
                    else
                    {
                        <option value="thuong">Thường</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">
                    <i class="fas fa-list"></i>Số dòng
                </label>
                <select name="pageSize" class="form-select">
                    @if (pageSize == "10")
                    {
                        <option value="10" selected>10</option>
                    }
                    else
                    {
                        <option value="10">10</option>
                    }
                    @if (pageSize == "25")
                    {
                        <option value="25" selected>25</option>
                    }
                    else
                    {
                        <option value="25">25</option>
                    }
                    @if (pageSize == "50")
                    {
                        <option value="50" selected>50</option>
                    }
                    else
                    {
                        <option value="50">50</option>
                    }
                    @if (pageSize == "100")
                    {
                        <option value="100" selected>100</option>
                    }
                    else
                    {
                        <option value="100">100</option>
                    }
                </select>
            </div>
            <div class="col-12">
                <div class="d-flex gap-2">
                    <button type="submit" class="admin-btn-primary">
                        <i class="fas fa-search"></i>Tìm kiếm
                    </button>
                    <a asp-action="Index" class="admin-btn-secondary">
                        <i class="fas fa-refresh"></i>Làm mới
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <div class="card-dashboard p-5 text-center">
        <i class="fas fa-chair fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">Chưa có ghế nào</h4>
        <p class="text-muted">Bắt đầu bằng cách thêm ghế đầu tiên vào hệ thống</p>
        <a asp-action="Create" class="admin-btn-primary">
            <i class="fas fa-plus"></i>Thêm ghế đầu tiên
        </a>
    </div>
}
else
{
    <div class="card-dashboard">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = searchTerm, 
                                theaterId = theaterIdFilter, 
                                seatType = seatTypeFilter,
                                pageSize = pageSize,
                                sortOrder = currentSort == "seatCode" && sortOrder == "asc" ? "desc" : "asc",
                                currentSort = "seatCode"
                            })" class="text-decoration-none text-dark">
                                <i class="fas fa-hashtag"></i>Mã ghế
                                @if (currentSort == "seatCode")
                                {
                                    <i class="fas fa-sort-@(sortOrder == "asc" ? "up" : "down") ms-1"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = searchTerm, 
                                theaterId = theaterIdFilter, 
                                seatType = seatTypeFilter,
                                pageSize = pageSize,
                                sortOrder = currentSort == "seatType" && sortOrder == "asc" ? "desc" : "asc",
                                currentSort = "seatType"
                            })" class="text-decoration-none text-dark">
                                <i class="fas fa-tag"></i>Loại ghế
                                @if (currentSort == "seatType")
                                {
                                    <i class="fas fa-sort-@(sortOrder == "asc" ? "up" : "down") ms-1"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = searchTerm, 
                                theaterId = theaterIdFilter, 
                                seatType = seatTypeFilter,
                                pageSize = pageSize,
                                sortOrder = currentSort == "theater" && sortOrder == "asc" ? "desc" : "asc",
                                currentSort = "theater"
                            })" class="text-decoration-none text-dark">
                                <i class="fas fa-building"></i>Rạp chiếu
                                @if (currentSort == "theater")
                                {
                                    <i class="fas fa-sort-@(sortOrder == "asc" ? "up" : "down") ms-1"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                }
                            </a>
                        </th>
                        <th class="text-center">
                            <i class="fas fa-cogs"></i>Thao tác
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary text-white icon-circle me-3">
                                        <i class="fas fa-chair"></i>
                                    </div>
                                    <div>
                                        <strong>@Html.DisplayFor(modelItem => item.SeatCode)</strong>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @{
                                    var seatTypeClass = item.SeatType switch
                                    {
                                        "vip" => "bg-warning",
                                        "thuong" => "bg-info",
                                        _ => "bg-secondary"
                                    };
                                    var seatTypeText = item.SeatType switch
                                    {
                                        "vip" => "VIP",
                                        "thuong" => "Thường",
                                        _ => item.SeatType
                                    };
                                }
                                <span class="badge @seatTypeClass">
                                    <i class="fas fa-tag"></i>@seatTypeText
                                </span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-success text-white icon-circle me-3">
                                        <i class="fas fa-building"></i>
                                    </div>
                                    <div>
                                        <strong>@(item.Theater?.Name ?? "N/A")</strong>
                                        @if (item.Theater != null)
                                        {
                                            <br><small class="text-muted">@item.Theater.Location - Phòng @item.Theater.RoomNumber</small>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.SeatId" class="admin-btn-secondary" style="padding: 6px 12px; font-size: 0.8rem;" title="Chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.SeatId" class="admin-btn-success" style="padding: 6px 12px; font-size: 0.8rem;" title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.SeatId" class="admin-btn-danger" style="padding: 6px 12px; font-size: 0.8rem;" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <!-- Pagination -->
    <div class="d-flex justify-content-between align-items-center mt-4">
        <div class="text-muted">
            Hiển thị @startItem đến @endItem trong tổng số @totalCount ghế
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination mb-0">
                @if (currentPageInt > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            search = searchTerm, 
                            theaterId = theaterIdFilter, 
                            seatType = seatTypeFilter,
                            pageSize = pageSize,
                            sortOrder = sortOrder,
                            currentSort = currentSort,
                            page = currentPageInt - 1
                        })">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                }
                
                @for (int i = Math.Max(1, currentPageInt - 2); i <= Math.Min(totalPages, currentPageInt + 2); i++)
                {
                    <li class="page-item @(i == currentPageInt ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            search = searchTerm, 
                            theaterId = theaterIdFilter, 
                            seatType = seatTypeFilter,
                            pageSize = pageSize,
                            sortOrder = sortOrder,
                            currentSort = currentSort,
                            page = i
                        })">@i</a>
                    </li>
                }
                
                @if (currentPageInt < totalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            search = searchTerm, 
                            theaterId = theaterIdFilter, 
                            seatType = seatTypeFilter,
                            pageSize = pageSize,
                            sortOrder = sortOrder,
                            currentSort = currentSort,
                            page = currentPageInt + 1
                        })">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-submit form when pageSize changes
            $('select[name="pageSize"]').change(function() {
                $(this).closest('form').submit();
            });
            
            // Clear search when clicking refresh
            $('a[href*="Index"]').click(function() {
                if ($(this).text().includes('Làm mới')) {
                    $(this).attr('href', '@Url.Action("Index")');
                }
            });
        });
    </script>
}



