@model IEnumerable<Project2_Nhom5.Models.User>

@{
    ViewData["Title"] = "Quản lý Người dùng";
    var searchTerm = ViewBag.Search?.ToString() ?? "";
    var sortOrder = ViewBag.SortOrder?.ToString() ?? "";
    var currentSort = ViewBag.CurrentSort?.ToString() ?? "";
    var page = ViewBag.CurrentPage?.ToString() ?? "1";
    var pageSize = ViewBag.PageSize?.ToString() ?? "10";
    var roleFilter = ViewBag.Role?.ToString() ?? "";
    var statusFilter = ViewBag.Status?.ToString() ?? "";
    var totalCount = ViewBag.TotalCount ?? 0;
    var totalPages = ViewBag.TotalPages ?? 1;
    var currentPageInt = int.Parse(page);
    var pageSizeInt = int.Parse(pageSize);
    var startItem = ((currentPageInt - 1) * pageSizeInt) + 1;
    var endItem = Math.Min(currentPageInt * pageSizeInt, totalCount);
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-users me-2 text-primary"></i>Quản lý Người dùng
        </h2>
        <p class="text-muted mb-0">Danh sách tất cả người dùng trong hệ thống</p>
    </div>
    <a asp-action="Create" class="admin-btn-primary">
        <i class="fas fa-plus"></i>Thêm người dùng mới
    </a>
</div>

<!-- Search and Filter Section -->
<div class="card-dashboard mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">
                    <i class="fas fa-search"></i>Tìm kiếm
                </label>
                <input type="text" name="search" class="form-control" placeholder="Tìm theo tên, email, số điện thoại..." value="@searchTerm">
            </div>
            <div class="col-md-3">
                <label class="form-label">
                    <i class="fas fa-filter"></i>Vai trò
                </label>
                <select name="role" class="form-select">
                    <option value="">Tất cả vai trò</option>
                    @if (roleFilter == "Admin")
                    {
                        <option value="Admin" selected>Quản trị viên</option>
                    }
                    else
                    {
                        <option value="Admin">Quản trị viên</option>
                    }
                    @if (roleFilter == "DaiLy")
                    {
                        <option value="DaiLy" selected>Đại lý</option>
                    }
                    else
                    {
                        <option value="DaiLy">Đại lý</option>
                    }
                    @if (roleFilter == "NguoiDung")
                    {
                        <option value="NguoiDung" selected>Người dùng</option>
                    }
                    else
                    {
                        <option value="NguoiDung">Người dùng</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">
                    <i class="fas fa-toggle-on"></i>Trạng thái
                </label>
                <select name="status" class="form-select">
                    <option value="">Tất cả trạng thái</option>
                    @if (statusFilter == "hoatdong")
                    {
                        <option value="hoatdong" selected>Hoạt động</option>
                    }
                    else
                    {
                        <option value="hoatdong">Hoạt động</option>
                    }
                    @if (statusFilter == "khonghoatdong")
                    {
                        <option value="khonghoatdong" selected>Không hoạt động</option>
                    }
                    else
                    {
                        <option value="khonghoatdong">Không hoạt động</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">
                    <i class="fas fa-list"></i>Số dòng
                </label>
                <select name="pageSize" class="form-select">
                    @if (pageSize == "10")
                    {
                        <option value="10" selected>10</option>
                    }
                    else
                    {
                        <option value="10">10</option>
                    }
                    @if (pageSize == "25")
                    {
                        <option value="25" selected>25</option>
                    }
                    else
                    {
                        <option value="25">25</option>
                    }
                    @if (pageSize == "50")
                    {
                        <option value="50" selected>50</option>
                    }
                    else
                    {
                        <option value="50">50</option>
                    }
                    @if (pageSize == "100")
                    {
                        <option value="100" selected>100</option>
                    }
                    else
                    {
                        <option value="100">100</option>
                    }
                </select>
            </div>
            <div class="col-12">
                <div class="d-flex gap-2">
                    <button type="submit" class="admin-btn-primary">
                        <i class="fas fa-search"></i>Tìm kiếm
                    </button>
                    <a asp-action="Index" class="admin-btn-secondary">
                        <i class="fas fa-refresh"></i>Làm mới
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <div class="card-dashboard p-5 text-center">
        <i class="fas fa-users fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">Chưa có người dùng nào</h4>
        <p class="text-muted">Bắt đầu bằng cách thêm người dùng đầu tiên vào hệ thống</p>
        <a asp-action="Create" class="admin-btn-primary">
            <i class="fas fa-plus"></i>Thêm người dùng đầu tiên
        </a>
    </div>
}
else
{
    <div class="card-dashboard">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = searchTerm, 
                                role = roleFilter, 
                                status = statusFilter, 
                                pageSize = pageSize,
                                sortOrder = currentSort == "username" && sortOrder == "asc" ? "desc" : "asc",
                                currentSort = "username"
                            })" class="text-decoration-none text-dark">
                                <i class="fas fa-user"></i>Thông tin người dùng
                                @if (currentSort == "username")
                                {
                                    <i class="fas fa-sort-@(sortOrder == "asc" ? "up" : "down") ms-1"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = searchTerm, 
                                role = roleFilter, 
                                status = statusFilter, 
                                pageSize = pageSize,
                                sortOrder = currentSort == "email" && sortOrder == "asc" ? "desc" : "asc",
                                currentSort = "email"
                            })" class="text-decoration-none text-dark">
                                <i class="fas fa-envelope"></i>Email
                                @if (currentSort == "email")
                                {
                                    <i class="fas fa-sort-@(sortOrder == "asc" ? "up" : "down") ms-1"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <i class="fas fa-phone"></i>Số điện thoại
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = searchTerm, 
                                role = roleFilter, 
                                status = statusFilter, 
                                pageSize = pageSize,
                                sortOrder = currentSort == "role" && sortOrder == "asc" ? "desc" : "asc",
                                currentSort = "role"
                            })" class="text-decoration-none text-dark">
                                <i class="fas fa-user-tag"></i>Vai trò
                                @if (currentSort == "role")
                                {
                                    <i class="fas fa-sort-@(sortOrder == "asc" ? "up" : "down") ms-1"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = searchTerm, 
                                role = roleFilter, 
                                status = statusFilter, 
                                pageSize = pageSize,
                                sortOrder = currentSort == "status" && sortOrder == "asc" ? "desc" : "asc",
                                currentSort = "status"
                            })" class="text-decoration-none text-dark">
                                <i class="fas fa-info-circle"></i>Trạng thái
                                @if (currentSort == "status")
                                {
                                    <i class="fas fa-sort-@(sortOrder == "asc" ? "up" : "down") ms-1"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                }
                            </a>
                        </th>
                        <th class="text-center">
                            <i class="fas fa-cogs"></i>Thao tác
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary text-white icon-circle me-3">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div>
                                        <strong>@Html.DisplayFor(modelItem => item.Username)</strong>
                                        <br><small class="text-muted">ID: @item.UserId</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-info text-white icon-circle me-3">
                                        <i class="fas fa-envelope"></i>
                                    </div>
                                    <div>
                                        <strong>@Html.DisplayFor(modelItem => item.Email)</strong>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-success text-white icon-circle me-3">
                                        <i class="fas fa-phone"></i>
                                    </div>
                                    <div>
                                        <strong>@Html.DisplayFor(modelItem => item.Phone)</strong>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @{
                                    var roleClass = item.Role switch
                                    {
                                        "Admin" => "bg-danger",
                                        "DaiLy" => "bg-warning",
                                        "NguoiDung" => "bg-info",
                                        _ => "bg-secondary"
                                    };
                                    var roleText = item.Role switch
                                    {
                                        "Admin" => "Quản trị viên",
                                        "DaiLy" => "Đại lý",
                                        "NguoiDung" => "Người dùng",
                                        _ => item.Role
                                    };
                                }
                                <span class="badge @roleClass">
                                    <i class="fas fa-user-tag"></i>@roleText
                                </span>
                            </td>
                            <td>
                                @{
                                    var statusClass = item.Status switch
                                    {
                                        "hoatdong" => "bg-success",
                                        "khonghoatdong" => "bg-warning",
                                        _ => "bg-secondary"
                                    };
                                    var statusText = item.Status switch
                                    {
                                        "hoatdong" => "Hoạt động",
                                        "khonghoatdong" => "Không hoạt động",
                                        _ => item.Status
                                    };
                                }
                                <span class="badge @statusClass">@statusText</span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.UserId" class="admin-btn-secondary" style="padding: 6px 12px; font-size: 0.8rem;" title="Chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.UserId" class="admin-btn-success" style="padding: 6px 12px; font-size: 0.8rem;" title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.UserId" class="admin-btn-danger" style="padding: 6px 12px; font-size: 0.8rem;" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <!-- Pagination -->
    <div class="d-flex justify-content-between align-items-center mt-4">
        <div class="text-muted">
            Hiển thị @startItem đến @endItem trong tổng số @totalCount người dùng
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination mb-0">
                
                @if (currentPageInt > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            search = searchTerm, 
                            role = roleFilter, 
                            status = statusFilter, 
                            pageSize = pageSize,
                            sortOrder = sortOrder,
                            currentSort = currentSort,
                            page = currentPageInt - 1
                        })">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                }
                
                @for (int i = Math.Max(1, currentPageInt - 2); i <= Math.Min(totalPages, currentPageInt + 2); i++)
                {
                    <li class="page-item @(i == currentPageInt ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            search = searchTerm, 
                            role = roleFilter, 
                            status = statusFilter, 
                            pageSize = pageSize,
                            sortOrder = sortOrder,
                            currentSort = currentSort,
                            page = i
                        })">@i</a>
                    </li>
                }
                
                @if (currentPageInt < totalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            search = searchTerm, 
                            role = roleFilter, 
                            status = statusFilter, 
                            pageSize = pageSize,
                            sortOrder = sortOrder,
                            currentSort = currentSort,
                            page = currentPageInt + 1
                        })">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-submit form when pageSize changes
            $('select[name="pageSize"]').change(function() {
                $(this).closest('form').submit();
            });
            
            // Clear search when clicking refresh
            $('a[href*="Index"]').click(function() {
                if ($(this).text().includes('Làm mới')) {
                    $(this).attr('href', '@Url.Action("Index")');
                }
            });
        });
    </script>
}



