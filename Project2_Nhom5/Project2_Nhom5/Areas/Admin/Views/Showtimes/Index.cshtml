@model IEnumerable<Project2_Nhom5.Models.Showtime>

@{
    ViewData["Title"] = "Quản lý Lịch chiếu";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-calendar-alt me-2 text-primary"></i>Quản lý Lịch chiếu
        </h2>
        <p class="text-muted mb-0">Danh sách tất cả lịch chiếu phim trong hệ thống</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Thêm lịch chiếu mới
    </a>
</div>

@if (!Model.Any())
{
    <div class="card-dashboard p-5 text-center">
        <i class="fas fa-calendar-alt fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">Chưa có lịch chiếu nào</h4>
        <p class="text-muted">Bắt đầu bằng cách thêm lịch chiếu đầu tiên vào hệ thống</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Thêm lịch chiếu đầu tiên
        </a>
    </div>
}
else
{
    <div class="card-dashboard">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>
                            <i class="fas fa-calendar me-1"></i>Ngày chiếu
                        </th>
                        <th>
                            <i class="fas fa-clock me-1"></i>Giờ chiếu
                        </th>
                        <th>
                            <i class="fas fa-film me-1"></i>Phim
                        </th>
                        <th>
                            <i class="fas fa-building me-1"></i>Rạp chiếu
                        </th>
                        <th class="text-center">
                            <i class="fas fa-cogs me-1"></i>Thao tác
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary text-white rounded-circle p-2 me-3">
                                        <i class="fas fa-calendar"></i>
                                    </div>
                                    <div>
                                        <strong>@item.ShowDate.ToString("dd/MM/yyyy")</strong>
                                        <br><small class="text-muted">@item.ShowDate.ToString("dddd", new System.Globalization.CultureInfo("vi-VN"))</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                                                    <span class="badge bg-info">
                                        <i class="fas fa-clock me-1"></i>@item.ShowTime.ToString("HH:mm")
                                    </span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-warning text-white rounded-circle p-2 me-3">
                                        <i class="fas fa-film"></i>
                                    </div>
                                    <div>
                                        <strong>@(item.Movie?.Title ?? "N/A")</strong>
                                        @if (item.Movie != null)
                                        {
                                            <br><small class="text-muted">@item.Movie.Genre - @item.Movie.Duration phút</small>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-success text-white rounded-circle p-2 me-3">
                                        <i class="fas fa-building"></i>
                                    </div>
                                    <div>
                                        <strong>@(item.Theater?.Name ?? "N/A")</strong>
                                        @if (item.Theater != null)
                                        {
                                            <br><small class="text-muted">@item.Theater.Location - Phòng @item.Theater.RoomNumber</small>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.ShowtimeId" class="btn btn-sm btn-outline-info" title="Chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.ShowtimeId" class="btn btn-sm btn-outline-warning" title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ShowtimeId" class="btn btn-sm btn-outline-danger" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
