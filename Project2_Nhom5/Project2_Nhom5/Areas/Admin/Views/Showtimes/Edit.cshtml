@model Project2_Nhom5.Models.Showtime

@{
    ViewData["Title"] = "Chỉnh sửa Lịch chiếu";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-edit me-2 text-warning"></i>Chỉnh sửa Lịch chiếu
        </h2>
        <p class="text-muted mb-0">Cập nhật thông tin lịch chiếu</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
</div>

<div class="card-dashboard">
    <div class="card-body p-4">
        <form asp-action="Edit" method="post" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <input type="hidden" asp-for="ShowtimeId" />
            
            <div class="col-md-6">
                <label asp-for="MovieId" class="form-label">
                    <i class="fas fa-film me-1"></i>Chọn phim <span class="text-danger">*</span>
                </label>
                <select asp-for="MovieId" class="form-select" asp-items="ViewBag.MovieId">
                    <option value="">Chọn phim...</option>
                </select>
                <span asp-validation-for="MovieId" class="text-danger small"></span>
            </div>
            
            <div class="col-md-6">
                <label asp-for="TheaterId" class="form-label">
                    <i class="fas fa-building me-1"></i>Chọn rạp chiếu <span class="text-danger">*</span>
                </label>
                <select asp-for="TheaterId" class="form-select" asp-items="ViewBag.TheaterId">
                    <option value="">Chọn rạp chiếu...</option>
                </select>
                <span asp-validation-for="TheaterId" class="text-danger small"></span>
            </div>
            
            <div class="col-md-6">
                <label asp-for="ShowDate" class="form-label">
                    <i class="fas fa-calendar me-1"></i>Ngày chiếu <span class="text-danger">*</span>
                </label>
                <input name="ShowDate" class="form-control" type="date" value="@Model.ShowDate.ToString("yyyy-MM-dd")" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="ShowDate" class="text-danger small"></span>
                <div class="form-text">Chọn ngày chiếu (từ hôm nay trở đi)</div>
            </div>
            
            <div class="col-md-6">
                <label asp-for="ShowTime" class="form-label">
                    <i class="fas fa-clock me-1"></i>Giờ chiếu <span class="text-danger">*</span>
                </label>
                <input name="ShowTime" class="form-control" type="time" value="@Model.ShowTime.ToString("HH:mm")" />
                <span asp-validation-for="ShowTime" class="text-danger small"></span>
                <div class="form-text">Chọn giờ chiếu (VD: 19:30, 20:00)</div>
            </div>
            
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="fas fa-info-circle me-2 text-warning"></i>Lưu ý khi chỉnh sửa lịch chiếu
                        </h6>
                        <ul class="mb-0">
                            <li>Thay đổi lịch chiếu có thể ảnh hưởng đến vé đã bán</li>
                            <li>Kiểm tra trùng lịch trước khi cập nhật</li>
                            <li>Đảm bảo thời gian hợp lý cho khách hàng</li>
                            <li>Thông báo cho khách hàng nếu có thay đổi lớn</li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <div class="col-12">
                <hr class="my-4">
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Hủy bỏ
                    </a>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save me-2"></i>Lưu thay đổi
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
