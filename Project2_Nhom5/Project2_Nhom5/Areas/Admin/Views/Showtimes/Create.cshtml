@model Project2_Nhom5.Models.Showtime

@{
    ViewData["Title"] = "Thêm Lịch chiếu Mới";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-plus-circle me-2 text-primary"></i>Thêm Lịch chiếu Mới
        </h2>
        <p class="text-muted mb-0">Tạo lịch chiếu phim mới trong hệ thống</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
</div>

<div class="card-dashboard">
    <div class="card-body p-4">
        <form asp-action="Create" method="post" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <div class="col-md-6">
                <label asp-for="MovieId" class="form-label">
                    <i class="fas fa-film me-1"></i>Chọn phim <span class="text-danger">*</span>
                </label>
                <select name="MovieId" class="form-select" asp-items="ViewBag.MovieId" required>
                    <option value="">Chọn phim...</option>
                </select>
                <span asp-validation-for="MovieId" class="text-danger small"></span>
            </div>
            
            <div class="col-md-6">
                <label asp-for="TheaterId" class="form-label">
                    <i class="fas fa-building me-1"></i>Chọn rạp chiếu <span class="text-danger">*</span>
                </label>
                <select name="TheaterId" class="form-select" asp-items="ViewBag.TheaterId" required>
                    <option value="">Chọn rạp chiếu...</option>
                </select>
                <span asp-validation-for="TheaterId" class="text-danger small"></span>
            </div>
            
            <div class="col-md-6">
                <label asp-for="ShowDate" class="form-label">
                    <i class="fas fa-calendar me-1"></i>Ngày chiếu <span class="text-danger">*</span>
                </label>
                <input name="ShowDate" class="form-control" type="date" asp-format="{0:yyyy-MM-dd}" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="ShowDate" class="text-danger small"></span>
                <div class="form-text">Chọn ngày chiếu (từ hôm nay trở đi)</div>
            </div>
            
            <div class="col-md-6">
                <label asp-for="ShowTime" class="form-label">
                    <i class="fas fa-clock me-1"></i>Giờ chiếu <span class="text-danger">*</span>
                </label>
                <input name="ShowTime" class="form-control" type="time" asp-format="{0:hh\:mm}" />
                <span asp-validation-for="ShowTime" class="text-danger small"></span>
                <div class="form-text">Chọn giờ chiếu (VD: 19:30, 20:00)</div>
            </div>
            
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="fas fa-info-circle me-2 text-primary"></i>Hướng dẫn tạo lịch chiếu
                        </h6>
                        <ul class="mb-0">
                            <li>Chọn phim đang được chiếu hoặc sắp chiếu</li>
                            <li>Chọn rạp chiếu phù hợp với phim</li>
                            <li>Ngày chiếu phải từ hôm nay trở đi</li>
                            <li>Giờ chiếu nên cách nhau ít nhất 30 phút</li>
                            <li>Kiểm tra trùng lịch trước khi tạo</li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <div class="col-12">
                <hr class="my-4">
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Hủy bỏ
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Tạo lịch chiếu
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
