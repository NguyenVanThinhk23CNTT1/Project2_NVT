@model Project2_Nhom5.Models.Payment

@{
    ViewData["Title"] = "Xóa Thanh toán";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-trash me-2 text-danger"></i>Xóa Thanh toán
        </h2>
        <p class="text-muted mb-0">Xác nhận xóa giao dịch khỏi hệ thống</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card-dashboard border-danger">
            <div class="card-body text-center p-4">
                <div class="bg-danger text-white rounded-circle mx-auto mb-3" style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center;">
                    <i class="fas fa-exclamation-triangle fa-2x"></i>
                </div>
                <h4 class="text-danger mb-2">Cảnh báo!</h4>
                <p class="text-muted">Bạn sắp xóa giao dịch thanh toán này. Hành động này không thể hoàn tác.</p>
                
                <div class="bg-light rounded p-3 mb-3">
                    <i class="fas fa-credit-card fa-3x text-primary mb-2"></i>
                    <h5 class="mb-2">#@Model.PaymentId.ToString("000000")</h5>
                    <span class="badge bg-success mb-2">@Model.Amount.ToString("N0") VNĐ</span>
                    <div class="d-flex align-items-center gap-2">
                        <span class="badge bg-secondary">#@(Model.Ticket?.TicketId.ToString("000000") ?? "N/A")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="card-dashboard">
            <div class="card-body p-4">
                <h5 class="card-title mb-4">
                    <i class="fas fa-info-circle me-2 text-primary"></i>Thông tin giao dịch sẽ bị xóa
                </h5>
                
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Lưu ý:</strong> Việc xóa có thể ảnh hưởng đến báo cáo doanh thu.
                </div>
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-primary text-white rounded-circle p-2 me-3">
                                <i class="fas fa-dollar-sign"></i>
                            </div>
                            <div>
                                <small class="text-muted">Số tiền</small>
                                <div class="fw-bold">@Model.Amount.ToString("N0") VNĐ</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-info text-white rounded-circle p-2 me-3">
                                <i class="fas fa-credit-card"></i>
                            </div>
                            <div>
                                <small class="text-muted">Phương thức</small>
                                <div class="fw-bold">@Model.PaymentMethod</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-warning text-white rounded-circle p-2 me-3">
                                <i class="fas fa-calendar"></i>
                            </div>
                            <div>
                                <small class="text-muted">Ngày thanh toán</small>
                                <div class="fw-bold">@Model.PaymentDate?.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-warning text-white rounded-circle p-2 me-3">
                                <i class="fas fa-ticket-alt"></i>
                            </div>
                            <div>
                                <small class="text-muted">Vé liên quan</small>
                                <div class="fw-bold">#@(Model.Ticket?.TicketId.ToString("000000") ?? "N/A")</div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <form asp-action="Delete" class="mt-4">
                    <input type="hidden" asp-for="PaymentId" />
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Hủy bỏ
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Xác nhận xóa
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
