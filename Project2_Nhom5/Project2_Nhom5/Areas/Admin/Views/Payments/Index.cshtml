@model IEnumerable<Project2_Nhom5.Models.Payment>

@{
    ViewData["Title"] = "Quản lý Thanh toán";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-credit-card me-2 text-primary"></i>Quản lý Thanh toán
        </h2>
        <p class="text-muted mb-0">Danh sách tất cả giao dịch thanh toán trong hệ thống</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Thêm thanh toán mới
    </a>
</div>

@if (!Model.Any())
{
    <div class="card-dashboard p-5 text-center">
        <i class="fas fa-credit-card fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">Chưa có giao dịch thanh toán nào</h4>
        <p class="text-muted">Bắt đầu bằng cách thêm giao dịch thanh toán đầu tiên vào hệ thống</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Thêm thanh toán đầu tiên
        </a>
    </div>
}
else
{
    <div class="card-dashboard">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>
                            <i class="fas fa-hashtag me-1"></i>Mã giao dịch
                        </th>
                        <th>
                            <i class="fas fa-dollar-sign me-1"></i>Số tiền
                        </th>
                        <th>
                            <i class="fas fa-credit-card me-1"></i>Phương thức
                        </th>
                        <th>
                            <i class="fas fa-calendar me-1"></i>Ngày thanh toán
                        </th>
                        <th>
                            <i class="fas fa-ticket-alt me-1"></i>Vé liên quan
                        </th>
                        <th class="text-center">
                            <i class="fas fa-cogs me-1"></i>Thao tác
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary text-white rounded-circle p-2 me-3">
                                        <i class="fas fa-credit-card"></i>
                                    </div>
                                    <div>
                                        <strong>#@item.PaymentId.ToString("D6")</strong>
                                    </div>
                                </div>
                            </td>
                            <td>
                                                                    <span class="badge bg-success">
                                        <i class="fas fa-dollar-sign me-1"></i>@item.Amount.ToString("N0") VNĐ
                                    </span>
                            </td>
                            <td>
                                @{
                                    var methodClass = item.PaymentMethod switch
                                    {
                                        "cash" => "bg-success",
                                        "credit_card" => "bg-primary",
                                        "bank_transfer" => "bg-info",
                                        "momo" => "bg-warning",
                                        "zalopay" => "bg-secondary",
                                        _ => "bg-secondary"
                                    };
                                    var methodText = item.PaymentMethod switch
                                    {
                                        "cash" => "Tiền mặt",
                                        "credit_card" => "Thẻ tín dụng",
                                        "bank_transfer" => "Chuyển khoản",
                                        "momo" => "MoMo",
                                        "zalopay" => "ZaloPay",
                                        _ => item.PaymentMethod
                                    };
                                }
                                <span class="badge @methodClass">
                                    <i class="fas fa-credit-card me-1"></i>@methodText
                                </span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-info text-white rounded-circle p-2 me-3">
                                        <i class="fas fa-calendar"></i>
                                    </div>
                                    <div>
                                        <strong>@item.PaymentDate?.ToString("dd/MM/yyyy")</strong>
                                        <br><small class="text-muted">@item.PaymentDate?.ToString("HH:mm")</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-warning text-white rounded-circle p-2 me-3">
                                        <i class="fas fa-ticket-alt"></i>
                                    </div>
                                    <div>
                                        <strong>#@(item.Ticket?.TicketId.ToString("D6") ?? "N/A")</strong>
                                        @if (item.Ticket != null)
                                        {
                                            <br><small class="text-muted">@item.Ticket.Showtime?.Movie?.Title</small>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.PaymentId" class="btn btn-sm btn-outline-info" title="Chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.PaymentId" class="btn btn-sm btn-outline-warning" title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.PaymentId" class="btn btn-sm btn-outline-danger" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
