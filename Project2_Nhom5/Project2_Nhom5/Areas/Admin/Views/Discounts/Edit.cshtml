@model Project2_Nhom5.Models.Discount

@{
    ViewData["Title"] = "Chỉnh sửa Khuyến mãi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-edit me-2 text-warning"></i>Chỉnh sửa Khuyến mãi
        </h2>
        <p class="text-muted mb-0">Cập nhật thông tin khuyến mãi: @Model.Code</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
</div>

<div class="card-dashboard">
    <div class="card-body p-4">
        <form asp-action="Edit" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <input type="hidden" asp-for="DiscountId" />
            
            <div class="col-md-6">
                <label asp-for="Code" class="form-label">
                    <i class="fas fa-tag me-1"></i>Mã khuyến mãi <span class="text-danger">*</span>
                </label>
                <input asp-for="Code" class="form-control" placeholder="Nhập mã khuyến mãi..." />
                <span asp-validation-for="Code" class="text-danger small"></span>
                <div class="form-text">Ví dụ: SUMMER2024, WELCOME10</div>
            </div>
            
            <div class="col-md-6">
                <label asp-for="DiscountType" class="form-label">
                    <i class="fas fa-percent me-1"></i>Loại khuyến mãi <span class="text-danger">*</span>
                </label>
                <select asp-for="DiscountType" class="form-select">
                    <option value="">Chọn loại khuyến mãi...</option>
                    <option value="phantram">Phần trăm (%)</option>
                    <option value="codinh">Số tiền cố định (VNĐ)</option>
                </select>
                <span asp-validation-for="DiscountType" class="text-danger small"></span>
            </div>
            
            <div class="col-md-6">
                <label asp-for="Value" class="form-label">
                    <i class="fas fa-dollar-sign me-1"></i>Giá trị khuyến mãi <span class="text-danger">*</span>
                </label>
                <input asp-for="Value" class="form-control" type="number" min="0" step="0.01" placeholder="Nhập giá trị..." />
                <span asp-validation-for="Value" class="text-danger small"></span>
                <div class="form-text">Nhập phần trăm (VD: 10) hoặc số tiền (VD: 50000)</div>
            </div>
            
            <div class="col-md-6">
                <label asp-for="ExpiryDate" class="form-label">
                    <i class="fas fa-calendar-times me-1"></i>Ngày hết hạn <span class="text-danger">*</span>
                </label>
                <input asp-for="ExpiryDate" class="form-control" type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="ExpiryDate" class="text-danger small"></span>
                <div class="form-text">Chọn ngày hết hạn (từ hôm nay trở đi)</div>
            </div>
            
            <div class="col-12">
                <label asp-for="Description" class="form-label">
                    <i class="fas fa-align-left me-1"></i>Mô tả
                </label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập mô tả khuyến mãi..."></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>
            
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="fas fa-info-circle me-2 text-warning"></i>Lưu ý khi chỉnh sửa
                        </h6>
                        <ul class="mb-0">
                            <li>Thay đổi mã khuyến mãi có thể ảnh hưởng đến khách hàng đang sử dụng</li>
                            <li>Điều chỉnh giá trị khuyến mãi cần cân nhắc kỹ lưỡng</li>
                            <li>Gia hạn ngày hết hạn có thể tăng hiệu quả chiến dịch</li>
                            <li>Cập nhật mô tả để khách hàng hiểu rõ hơn về ưu đãi</li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <div class="col-12">
                <hr class="my-4">
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Hủy bỏ
                    </a>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save me-2"></i>Lưu thay đổi
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
