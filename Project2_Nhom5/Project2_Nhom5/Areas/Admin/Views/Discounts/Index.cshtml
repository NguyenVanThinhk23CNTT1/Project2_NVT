@model IEnumerable<Project2_Nhom5.Models.Discount>

@{
    ViewData["Title"] = "Khuyến mãi";
    var searchTerm = ViewBag.Search?.ToString() ?? "";
    var sortOrder = ViewBag.SortOrder?.ToString() ?? "";
    var currentSort = ViewBag.CurrentSort?.ToString() ?? "";
    var page = ViewBag.CurrentPage?.ToString() ?? "1";
    var pageSize = ViewBag.PageSize?.ToString() ?? "10";
    var typeFilter = ViewBag.Type?.ToString() ?? "";
    var totalCount = ViewBag.TotalCount ?? 0;
    var totalPages = ViewBag.TotalPages ?? 1;
    var currentPageInt = int.Parse(page);
    var pageSizeInt = int.Parse(pageSize);
    var startItem = ((currentPageInt - 1) * pageSizeInt) + 1;
    var endItem = Math.Min(currentPageInt * pageSizeInt, totalCount);
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-tags me-2 text-primary"></i>Quản lý Khuyến mãi
        </h2>
        <p class="text-muted mb-0">Danh sách tất cả mã khuyến mãi trong hệ thống</p>
    </div>
    <a asp-action="Create" class="admin-btn-primary">
        <i class="fas fa-plus"></i>Thêm khuyến mãi mới
    </a>
</div>

<!-- Search and Filter Section -->
<div class="card-dashboard mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">
                    <i class="fas fa-search"></i>Tìm kiếm
                </label>
                <input type="text" name="search" class="form-control" placeholder="Tìm theo mã, mô tả..." value="@searchTerm">
            </div>
            <div class="col-md-3">
                <label class="form-label">
                    <i class="fas fa-percent"></i>Loại khuyến mãi
                </label>
                <select name="type" class="form-select">
                    <option value="">Tất cả loại</option>
                    @if (typeFilter == "phantram")
                    {
                        <option value="phantram" selected>Phần trăm (%)</option>
                    }
                    else
                    {
                        <option value="phantram">Phần trăm (%)</option>
                    }
                    @if (typeFilter == "codinh")
                    {
                        <option value="codinh" selected>Số tiền cố định</option>
                    }
                    else
                    {
                        <option value="codinh">Số tiền cố định</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">
                    <i class="fas fa-calendar"></i>Trạng thái hết hạn
                </label>
                <select name="expiryStatus" class="form-select">
                    <option value="">Tất cả</option>
                    @if (ViewBag.ExpiryStatus?.ToString() == "active")
                    {
                        <option value="active" selected>Còn hiệu lực</option>
                    }
                    else
                    {
                        <option value="active">Còn hiệu lực</option>
                    }
                    @if (ViewBag.ExpiryStatus?.ToString() == "expired")
                    {
                        <option value="expired" selected>Đã hết hạn</option>
                    }
                    else
                    {
                        <option value="expired">Đã hết hạn</option>
                    }
                    @if (ViewBag.ExpiryStatus?.ToString() == "expiring")
                    {
                        <option value="expiring" selected>Sắp hết hạn</option>
                    }
                    else
                    {
                        <option value="expiring">Sắp hết hạn</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">
                    <i class="fas fa-list"></i>Số dòng
                </label>
                <select name="pageSize" class="form-select">
                    @if (pageSize == "10")
                    {
                        <option value="10" selected>10</option>
                    }
                    else
                    {
                        <option value="10">10</option>
                    }
                    @if (pageSize == "25")
                    {
                        <option value="25" selected>25</option>
                    }
                    else
                    {
                        <option value="25">25</option>
                    }
                    @if (pageSize == "50")
                    {
                        <option value="50" selected>50</option>
                    }
                    else
                    {
                        <option value="50">50</option>
                    }
                    @if (pageSize == "100")
                    {
                        <option value="100" selected>100</option>
                    }
                    else
                    {
                        <option value="100">100</option>
                    }
                </select>
            </div>
            <div class="col-12">
                <div class="d-flex gap-2">
                    <button type="submit" class="admin-btn-primary">
                        <i class="fas fa-search"></i>Tìm kiếm
                    </button>
                    <a asp-action="Index" class="admin-btn-secondary">
                        <i class="fas fa-refresh"></i>Làm mới
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <div class="card-dashboard p-5 text-center">
        <i class="fas fa-tags fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">Chưa có khuyến mãi nào</h4>
        <p class="text-muted">Bắt đầu bằng cách thêm khuyến mãi đầu tiên vào hệ thống</p>
        <a asp-action="Create" class="admin-btn-primary">
            <i class="fas fa-plus"></i>Thêm khuyến mãi đầu tiên
        </a>
    </div>
}
else
{
    <div class="card-dashboard">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = searchTerm, 
                                type = typeFilter, 
                                expiryStatus = ViewBag.ExpiryStatus, 
                                pageSize = pageSize,
                                sortOrder = currentSort == "code" && sortOrder == "asc" ? "desc" : "asc",
                                currentSort = "code"
                            })" class="text-decoration-none text-dark">
                                <i class="fas fa-tag"></i>Mã khuyến mãi
                                @if (currentSort == "code")
                                {
                                    <i class="fas fa-sort-@(sortOrder == "asc" ? "up" : "down") ms-1"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <i class="fas fa-align-left"></i>Mô tả
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = searchTerm, 
                                type = typeFilter, 
                                expiryStatus = ViewBag.ExpiryStatus, 
                                pageSize = pageSize,
                                sortOrder = currentSort == "type" && sortOrder == "asc" ? "desc" : "asc",
                                currentSort = "type"
                            })" class="text-decoration-none text-dark">
                                <i class="fas fa-percent"></i>Loại
                                @if (currentSort == "type")
                                {
                                    <i class="fas fa-sort-@(sortOrder == "asc" ? "up" : "down") ms-1"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = searchTerm, 
                                type = typeFilter, 
                                expiryStatus = ViewBag.ExpiryStatus, 
                                pageSize = pageSize,
                                sortOrder = currentSort == "value" && sortOrder == "asc" ? "desc" : "asc",
                                currentSort = "value"
                            })" class="text-decoration-none text-dark">
                                <i class="fas fa-dollar-sign"></i>Giá trị
                                @if (currentSort == "value")
                                {
                                    <i class="fas fa-sort-@(sortOrder == "asc" ? "up" : "down") ms-1"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = searchTerm, 
                                type = typeFilter, 
                                expiryStatus = ViewBag.ExpiryStatus, 
                                pageSize = pageSize,
                                sortOrder = currentSort == "expiry" && sortOrder == "asc" ? "desc" : "asc",
                                currentSort = "expiry"
                            })" class="text-decoration-none text-dark">
                                <i class="fas fa-calendar-times"></i>Hết hạn
                                @if (currentSort == "expiry")
                                {
                                    <i class="fas fa-sort-@(sortOrder == "asc" ? "up" : "down") ms-1"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                }
                            </a>
                        </th>
                        <th class="text-center">
                            <i class="fas fa-cogs"></i>Thao tác
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary text-white icon-circle me-3">
                                        <i class="fas fa-tag"></i>
                                    </div>
                                    <div>
                                        <strong>@Html.DisplayFor(modelItem => item.Code)</strong>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    <span>@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</span>
                                }
                                else
                                {
                                    <span class="text-muted">Không có mô tả</span>
                                }
                            </td>
                            <td>
                                @{
                                    string discountTypeClass;
                                    string discountTypeText;
                                    
                                    switch (item.DiscountType)
                                    {
                                        case "phantram":
                                            discountTypeClass = "badge bg-success";
                                            discountTypeText = "Phần trăm";
                                            break;
                                        case "codinh":
                                            discountTypeClass = "badge bg-info";
                                            discountTypeText = "Số tiền cố định";
                                            break;
                                        default:
                                            discountTypeClass = "badge bg-secondary";
                                            discountTypeText = item.DiscountType;
                                            break;
                                    }
                                }
                                <span class="@discountTypeClass">@discountTypeText</span>
                            </td>
                            <td>
                                @if (item.DiscountType == "phantram")
                                {
                                    <span class="text-success fw-bold">@item.Value%</span>
                                }
                                else if (item.DiscountType == "codinh")
                                {
                                    <span class="text-info fw-bold">@item.Value.ToString("N0") VNĐ</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">@item.Value</span>
                                }
                            </td>
                            <td>
                                <div>
                                    <strong>@item.ExpiryDate.ToString("dd/MM/yyyy")</strong>
                                    @{
                                        var today = DateTime.Today;
                                        var expiryDate = item.ExpiryDate.ToDateTime(TimeOnly.MinValue);
                                        var daysLeft = (expiryDate - today).Days;
                                        
                                        string statusClass;
                                        string statusText;
                                        
                                        if (daysLeft < 0)
                                        {
                                            statusClass = "text-danger";
                                            statusText = "Đã hết hạn";
                                        }
                                        else if (daysLeft < 7)
                                        {
                                            statusClass = "text-warning";
                                            statusText = $"Hết hạn trong {daysLeft} ngày";
                                        }
                                        else
                                        {
                                            statusClass = "text-success";
                                            statusText = $"Còn {daysLeft} ngày";
                                        }
                                    }
                                    <br />
                                    <small class="@statusClass">@statusText</small>
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.DiscountId" class="admin-btn-secondary" style="padding: 6px 12px; font-size: 0.8rem;" title="Chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.DiscountId" class="admin-btn-success" style="padding: 6px 12px; font-size: 0.8rem;" title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.DiscountId" class="admin-btn-danger" style="padding: 6px 12px; font-size: 0.8rem;" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <!-- Pagination -->
    <div class="d-flex justify-content-between align-items-center mt-4">
        <div class="text-muted">
            Hiển thị @startItem đến @endItem trong tổng số @totalCount khuyến mãi
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination mb-0">
                @if (currentPageInt > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            search = searchTerm, 
                            type = typeFilter, 
                            expiryStatus = ViewBag.ExpiryStatus, 
                            pageSize = pageSize,
                            sortOrder = sortOrder,
                            currentSort = currentSort,
                            page = currentPageInt - 1
                        })">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                }
                
                @for (int i = Math.Max(1, currentPageInt - 2); i <= Math.Min(totalPages, currentPageInt + 2); i++)
                {
                    <li class="page-item @(i == currentPageInt ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            search = searchTerm, 
                            type = typeFilter, 
                            expiryStatus = ViewBag.ExpiryStatus, 
                            pageSize = pageSize,
                            sortOrder = sortOrder,
                            currentSort = currentSort,
                            page = i
                        })">@i</a>
                    </li>
                }
                
                @if (currentPageInt < totalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            search = searchTerm, 
                            type = typeFilter, 
                            expiryStatus = ViewBag.ExpiryStatus, 
                            pageSize = pageSize,
                            sortOrder = sortOrder,
                            currentSort = currentSort,
                            page = currentPageInt + 1
                        })">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-submit form when pageSize changes
            $('select[name="pageSize"]').change(function() {
                $(this).closest('form').submit();
            });
            
            // Clear search when clicking refresh
            $('a[href*="Index"]').click(function() {
                if ($(this).text().includes('Làm mới')) {
                    $(this).attr('href', '@Url.Action("Index")');
                }
            });
        });
    </script>
}



