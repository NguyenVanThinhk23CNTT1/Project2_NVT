@model IEnumerable<Project2_Nhom5.Models.Discount>

@{
    ViewData["Title"] = "Khuyến mãi";
}

<h1>Khuyến mãi</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm khuyến mãi</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h4>Chưa có khuyến mãi nào</h4>
        <p>Bắt đầu bằng cách thêm khuyến mãi đầu tiên vào hệ thống.</p>
        <a asp-action="Create" class="btn btn-primary">Thêm khuyến mãi đầu tiên</a>
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Mã</th>
                            <th>Mô tả</th>
                            <th>Loại</th>
                            <th>Giá trị</th>
                            <th>Hết hạn</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.Code)</strong>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <span>@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No description</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        string discountTypeClass;
                                        string discountTypeText;
                                        
                                        switch (item.DiscountType)
                                        {
                                            case "phantram":
                                                discountTypeClass = "badge bg-success";
                                                discountTypeText = "Phần trăm";
                                                break;
                                            case "codinh":
                                                discountTypeClass = "badge bg-info";
                                                discountTypeText = "Số tiền cố định";
                                                break;
                                            default:
                                                discountTypeClass = "badge bg-secondary";
                                                discountTypeText = item.DiscountType;
                                                break;
                                        }
                                    }
                                    <span class="@discountTypeClass">@discountTypeText</span>
                                </td>
                                <td>
                                    @if (item.DiscountType == "phantram")
                                    {
                                        <span class="text-success fw-bold">@item.Value%</span>
                                    }
                                    else if (item.DiscountType == "codinh")
                                    {
                                        <span class="text-info fw-bold">@item.Value.ToString("N0") VNĐ</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">@item.Value</span>
                                    }
                                </td>
                                <td>
                                    <strong>@item.ExpiryDate.ToString("dd/MM/yyyy")</strong>
                                    @{
                                        var today = DateTime.Today;
                                        var expiryDate = item.ExpiryDate.ToDateTime(TimeOnly.MinValue);
                                        var daysLeft = (expiryDate - today).Days;
                                        
                                        string statusClass;
                                        string statusText;
                                        
                                        if (daysLeft < 0)
                                        {
                                            statusClass = "text-danger";
                                            statusText = "Đã hết hạn";
                                        }
                                        else if (daysLeft < 7)
                                        {
                                            statusClass = "text-warning";
                                            statusText = $"Hết hạn trong {daysLeft} ngày";
                                        }
                                        else
                                        {
                                            statusClass = "text-success";
                                            statusText = $"Còn {daysLeft} ngày";
                                        }
                                    }
                                    <br />
                                    <small class="@statusClass">@statusText</small>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.DiscountId" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.DiscountId" class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.DiscountId" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
