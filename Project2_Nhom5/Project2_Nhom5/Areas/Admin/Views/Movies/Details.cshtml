@model Project2_Nhom5.Models.Movie

@{
    ViewData["Title"] = "Chi tiết Phim";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-eye me-2 text-info"></i>Chi tiết Phim
        </h2>
        <p class="text-muted mb-0">Thông tin chi tiết về phim: @(Model?.Title ?? "N/A")</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model?.MovieId" class="btn btn-warning">
            <i class="fas fa-edit me-2"></i>Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card-dashboard">
            <div class="card-body text-center p-4">
                @if (!string.IsNullOrEmpty(Model.PosterUrl))
                {
                    <img src="~/@Model.PosterUrl" alt="@Model.Title" class="img-fluid rounded mb-3" style="max-height: 400px; object-fit: cover;" />
                }
                else
                {
                    <div class="bg-light rounded d-flex align-items-center justify-content-center mb-3" style="height: 400px;">
                        <i class="fas fa-image fa-4x text-muted"></i>
                    </div>
                }
                
                <h4 class="mb-2">@Model.Title</h4>
                <span class="badge bg-info mb-2">@Model.Genre</span>
                
                @{
                    var statusClass = Model.Status switch
                    {
                        "dangchieu" => "bg-success",
                        "sapchieu" => "bg-warning",
                        "ngungchieu" => "bg-secondary",
                        _ => "bg-secondary"
                    };
                    var statusText = Model.Status switch
                    {
                        "dangchieu" => "Đang chiếu",
                        "sapchieu" => "Sắp chiếu",
                        "ngungchieu" => "Ngừng chiếu",
                        _ => Model.Status
                    };
                }
                <span class="badge @statusClass">@statusText</span>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="card-dashboard">
            <div class="card-body p-4">
                <h5 class="card-title mb-4">
                    <i class="fas fa-info-circle me-2 text-primary"></i>Thông tin chi tiết
                </h5>
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-primary text-white icon-circle me-3">
                                <i class="fas fa-heading"></i>
                            </div>
                            <div>
                                <small class="text-muted">Tên phim</small>
                                <div class="fw-bold">@Model.Title</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-info text-white icon-circle me-3">
                                <i class="fas fa-tags"></i>
                            </div>
                            <div>
                                <small class="text-muted">Thể loại</small>
                                <div class="fw-bold">@Model.Genre</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-warning text-white icon-circle me-3">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div>
                                <small class="text-muted">Thời lượng</small>
                                <div class="fw-bold">@Model.Duration phút</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-success text-white icon-circle me-3">
                                <i class="fas fa-info-circle"></i>
                            </div>
                            <div>
                                <small class="text-muted">Trạng thái</small>
                                <div class="fw-bold">@statusText</div>
                            </div>
                        </div>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mt-4">
                        <h6 class="mb-3">
                            <i class="fas fa-align-left me-2 text-primary"></i>Mô tả
                        </h6>
                        <div class="p-3 bg-light rounded">
                            @Model.Description
                        </div>
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(Model.TrailerUrl))
                {
                    <div class="mt-4">
                        <h6 class="mb-3">
                            <i class="fas fa-video me-2 text-primary"></i>Trailer
                        </h6>
                        <a href="@Model.TrailerUrl" target="_blank" class="btn btn-outline-primary">
                            <i class="fas fa-play me-2"></i>Xem trailer
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
