@model Project2_Nhom5.Models.Movie

@{
    ViewData["Title"] = "Xóa Phim";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-trash me-2 text-danger"></i>Xóa Phim
        </h2>
        <p class="text-muted mb-0">Xác nhận xóa phim khỏi hệ thống</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card-dashboard border-danger">
            <div class="card-body text-center p-4">
                <div class="bg-danger text-white rounded-circle mx-auto mb-3" style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center;">
                    <i class="fas fa-exclamation-triangle fa-2x"></i>
                </div>
                <h4 class="text-danger mb-2">Cảnh báo!</h4>
                <p class="text-muted">Bạn sắp xóa phim này khỏi hệ thống. Hành động này không thể hoàn tác.</p>
                
                @if (!string.IsNullOrEmpty(Model.PosterUrl))
                {
                    <img src="@Model.PosterUrl" alt="@Model.Title" class="img-fluid rounded mb-3" style="max-height: 200px; object-fit: cover;" />
                }
                else
                {
                    <div class="bg-light rounded d-flex align-items-center justify-content-center mb-3" style="height: 200px;">
                        <i class="fas fa-image fa-3x text-muted"></i>
                    </div>
                }
                
                <h5 class="mb-2">@Model.Title</h5>
                <span class="badge bg-info mb-2">@Model.Genre</span>
                <span class="badge bg-secondary">@Model.Duration phút</span>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="card-dashboard">
            <div class="card-body p-4">
                <h5 class="card-title mb-4">
                    <i class="fas fa-info-circle me-2 text-primary"></i>Thông tin phim sẽ bị xóa
                </h5>
                
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Lưu ý:</strong> Việc xóa phim này sẽ ảnh hưởng đến các lịch chiếu và vé liên quan.
                </div>
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-primary text-white rounded-circle p-2 me-3">
                                <i class="fas fa-heading"></i>
                            </div>
                            <div>
                                <small class="text-muted">Tên phim</small>
                                <div class="fw-bold">@Model.Title</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-info text-white rounded-circle p-2 me-3">
                                <i class="fas fa-tags"></i>
                            </div>
                            <div>
                                <small class="text-muted">Thể loại</small>
                                <div class="fw-bold">@Model.Genre</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-warning text-white rounded-circle p-2 me-3">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div>
                                <small class="text-muted">Thời lượng</small>
                                <div class="fw-bold">@Model.Duration phút</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-success text-white rounded-circle p-2 me-3">
                                <i class="fas fa-info-circle"></i>
                            </div>
                            <div>
                                <small class="text-muted">Trạng thái</small>
                                <div class="fw-bold">
                                    @{
                                                                            var statusText = Model.Status switch
                                    {
                                        "dang_chieu" => "Đang chiếu",
                                        "sap_chieu" => "Sắp chiếu",
                                        "ket_thuc" => "Kết thúc",
                                        "ngung_chieu" => "Ngừng chiếu",
                                        _ => Model.Status
                                    };
                                    }
                                    @statusText
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mt-4">
                        <h6 class="mb-3">
                            <i class="fas fa-align-left me-2 text-primary"></i>Mô tả
                        </h6>
                        <div class="p-3 bg-light rounded">
                            @Model.Description
                        </div>
                    </div>
                }
                
                <form asp-action="Delete" class="mt-4">
                    <input type="hidden" asp-for="MovieId" />
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Hủy bỏ
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Xác nhận xóa
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
