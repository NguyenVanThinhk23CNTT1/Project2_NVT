@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <!-- Welcome Section -->
    <div class="col-12 mb-4">
        <div class="card-dashboard p-4">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h2 class="text-primary mb-2">
                        <i class="fas fa-film"></i>Chào mừng đến với Cinema Admin
                    </h2>
                    <p class="text-muted mb-0">Hệ thống quản lý rạp chiếu phim - Nhóm 5</p>
                </div>
                <div class="col-md-4 text-end">
                    <div class="d-flex align-items-center justify-content-end">
                        <div class="me-3">
                            <small class="text-muted">Ngày hiện tại</small>
                            <div class="fw-bold">@DateTime.Now.ToString("dd/MM/yyyy")</div>
                        </div>
                        <div class="bg-primary text-white icon-circle me-3" style="width: 48px; height: 48px;">
                            <i class="fas fa-calendar-alt fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Team Information -->
    <div class="col-12 mb-4">
        <div class="card-dashboard p-4">
            <h4 class="mb-3">
                <i class="fas fa-users me-2 text-primary"></i>Thông tin nhóm phát triển
            </h4>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="card border-0 bg-light">
                        <div class="card-body text-center">
                            <div class="bg-primary text-white icon-circle-lg mx-auto mb-3">
                                <i class="fas fa-user fa-2x"></i>
                            </div>
                            <h5 class="card-title">Nguyễn Quang Tâm</h5>
                            <p class="card-text text-muted">Team Leader</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card border-0 bg-light">
                        <div class="card-body text-center">
                            <div class="bg-success text-white icon-circle-lg mx-auto mb-3">
                                <i class="fas fa-user fa-2x"></i>
                            </div>
                            <h5 class="card-title">Nguyễn Văn Thịnh</h5>
                            <p class="card-text text-muted">Developer</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card border-0 bg-light">
                        <div class="card-body text-center">
                            <div class="bg-warning text-white icon-circle-lg mx-auto mb-3">
                                <i class="fas fa-user fa-2x"></i>
                            </div>
                            <h5 class="card-title">Đoàn Anh Quân</h5>
                            <p class="card-text text-muted">Developer</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="col-12 mb-4">
        <h4 class="mb-3">
            <i class="fas fa-chart-bar me-2 text-primary"></i>Thống kê nhanh
        </h4>
        <div class="row">
            <div class="col-md-3 mb-3">
                <div class="stat-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="mb-0">0</h3>
                            <small>Phim</small>
                        </div>
                        <i class="fas fa-film fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stat-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="mb-0">0</h3>
                            <small>Rạp chiếu</small>
                        </div>
                        <i class="fas fa-building fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stat-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="mb-0">0</h3>
                            <small>Lịch chiếu</small>
                        </div>
                        <i class="fas fa-calendar-alt fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stat-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="mb-0">0</h3>
                            <small>Vé đã bán</small>
                        </div>
                        <i class="fas fa-ticket-alt fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="col-12">
        <div class="card-dashboard p-4">
            <h4 class="mb-3 quick-actions">
                <i class="fas fa-bolt text-primary"></i>Thao tác nhanh
            </h4>
            <div class="row">
                <div class="col-md-3 mb-3">
                    <a href="@Url.Action("Create", "Movies", new { area = "Admin" })" class="admin-btn-primary w-100 p-3">
                        <i class="fas fa-plus fa-2x mb-2"></i><br>
                        Thêm phim mới
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a href="@Url.Action("Create", "Theaters", new { area = "Admin" })" class="admin-btn-success w-100 p-3">
                        <i class="fas fa-plus fa-2x mb-2"></i><br>
                        Thêm rạp chiếu
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a href="@Url.Action("Create", "Showtimes", new { area = "Admin" })" class="admin-btn-warning w-100 p-3">
                        <i class="fas fa-plus fa-2x mb-2"></i><br>
                        Tạo lịch chiếu
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a href="@Url.Action("Index", "Revenues", new { area = "Admin" })" class="admin-btn-secondary w-100 p-3">
                        <i class="fas fa-chart-line fa-2x mb-2"></i><br>
                        Xem doanh thu
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>



