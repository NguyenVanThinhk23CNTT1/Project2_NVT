@model IEnumerable<Project2_Nhom5.Models.User>

@{
    ViewData["Title"] = "Quản lý Người dùng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-users me-2 text-primary"></i>Quản lý Người dùng
        </h2>
        <p class="text-muted mb-0">Danh sách tất cả người dùng trong hệ thống</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Thêm người dùng mới
    </a>
</div>

@if (!Model.Any())
{
    <div class="card-dashboard p-5 text-center">
        <i class="fas fa-users fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">Chưa có người dùng nào</h4>
        <p class="text-muted">Bắt đầu bằng cách thêm người dùng đầu tiên vào hệ thống</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Thêm người dùng đầu tiên
        </a>
    </div>
}
else
{
    <div class="card-dashboard">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>
                            <i class="fas fa-user me-1"></i>Thông tin người dùng
                        </th>
                        <th>
                            <i class="fas fa-envelope me-1"></i>Email
                        </th>
                        <th>
                            <i class="fas fa-phone me-1"></i>Số điện thoại
                        </th>
                        <th>
                            <i class="fas fa-user-tag me-1"></i>Vai trò
                        </th>
                        <th>
                            <i class="fas fa-info-circle me-1"></i>Trạng thái
                        </th>
                        <th class="text-center">
                            <i class="fas fa-cogs me-1"></i>Thao tác
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary text-white icon-circle me-3">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div>
                                        <strong>@Html.DisplayFor(modelItem => item.Username)</strong>
                                        <br><small class="text-muted">ID: @item.UserId</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-info text-white icon-circle me-3">
                                        <i class="fas fa-envelope"></i>
                                    </div>
                                    <div>
                                        <strong>@Html.DisplayFor(modelItem => item.Email)</strong>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-success text-white icon-circle me-3">
                                        <i class="fas fa-phone"></i>
                                    </div>
                                    <div>
                                        <strong>@Html.DisplayFor(modelItem => item.Phone)</strong>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @{
                                    var roleClass = item.Role switch
                                    {
                                        "Admin" => "bg-danger",
                                        "Agency" => "bg-warning",
                                        "User" => "bg-info",
                                        "Guest" => "bg-secondary",
                                        _ => "bg-secondary"
                                    };
                                    var roleText = item.Role switch
                                    {
                                        "Admin" => "Quản trị viên",
                                        "Agency" => "Đại lý",
                                        "User" => "Người dùng",
                                        "Guest" => "Khách",
                                        _ => item.Role
                                    };
                                }
                                <span class="badge @roleClass">
                                    <i class="fas fa-user-tag me-1"></i>@roleText
                                </span>
                            </td>
                            <td>
                                @{
                                    var statusClass = item.Status switch
                                    {
                                        "active" => "bg-success",
                                        "inactive" => "bg-warning",
                                        _ => "bg-secondary"
                                    };
                                    var statusText = item.Status switch
                                    {
                                        "active" => "Hoạt động",
                                        "inactive" => "Không hoạt động",
                                        _ => item.Status
                                    };
                                }
                                <span class="badge @statusClass">@statusText</span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-info" title="Chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-warning" title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-danger" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
