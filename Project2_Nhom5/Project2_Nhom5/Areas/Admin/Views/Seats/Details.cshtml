@model Project2_Nhom5.Models.Seat

@{
    ViewData["Title"] = "Chi tiết Ghế ngồi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-chair me-2 text-primary"></i>Chi tiết Ghế ngồi
        </h2>
        <p class="text-muted mb-0">Thông tin chi tiết về ghế ngồi trong hệ thống</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card-dashboard">
            <div class="card-body p-4">
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-primary text-white icon-circle me-3">
                                <i class="fas fa-hashtag"></i>
                            </div>
                            <div>
                                <h6 class="mb-1 text-muted">Mã ghế</h6>
                                <h5 class="mb-0">@Model.SeatCode</h5>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-success text-white icon-circle me-3">
                                <i class="fas fa-tag"></i>
                            </div>
                            <div>
                                <h6 class="mb-1 text-muted">Loại ghế</h6>
                                <h5 class="mb-0">
                                    @if (Model.SeatType == "thuong")
                                    {
                                        <span class="badge bg-secondary">Ghế thường</span>
                                    }
                                    else if (Model.SeatType == "vip")
                                    {
                                        <span class="badge bg-warning">Ghế VIP</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">@Model.SeatType</span>
                                    }
                                </h5>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-12">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-info text-white icon-circle me-3">
                                <i class="fas fa-building"></i>
                            </div>
                            <div>
                                <h6 class="mb-1 text-muted">Rạp chiếu</h6>
                                <h5 class="mb-0">
                                    @if (Model.Theater != null)
                                    {
                                        <span>@Model.Theater.Name</span>
                                        <br><small class="text-muted">@Model.Theater.Location - Phòng @Model.Theater.RoomNumber</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa được gán</span>
                                    }
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card-dashboard">
            <div class="card-body p-4">
                <h5 class="card-title mb-3">
                    <i class="fas fa-info-circle me-2 text-primary"></i>Thông tin bổ sung
                </h5>
                <div class="mb-3">
                    <small class="text-muted">ID Ghế:</small>
                    <div class="fw-bold">@Model.SeatId</div>
                </div>
                <div class="mb-3">
                    <small class="text-muted">ID Rạp:</small>
                    <div class="fw-bold">@Model.TheaterId</div>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Trạng thái:</small>
                    <div>
                        <span class="badge bg-success">Hoạt động</span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card-dashboard mt-3">
            <div class="card-body p-4">
                <h5 class="card-title mb-3">
                    <i class="fas fa-cogs me-2 text-warning"></i>Thao tác
                </h5>
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.SeatId" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Chỉnh sửa
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.SeatId" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Xóa ghế
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-list me-2"></i>Danh sách ghế
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
