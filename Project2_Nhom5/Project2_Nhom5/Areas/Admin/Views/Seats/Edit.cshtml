@model Project2_Nhom5.Models.Seat

@{
    ViewData["Title"] = "Chỉnh sửa Ghế ngồi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-edit me-2 text-warning"></i>Chỉnh sửa Ghế ngồi
        </h2>
        <p class="text-muted mb-0">Cập nhật thông tin ghế ngồi trong hệ thống</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
</div>

<div class="card-dashboard">
    <div class="card-body p-4">
        <form asp-action="Edit" method="post" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <input type="hidden" asp-for="SeatId" />
            
            <div class="col-md-6">
                <label asp-for="TheaterId" class="form-label">
                    <i class="fas fa-building me-1"></i>Chọn rạp chiếu <span class="text-danger">*</span>
                </label>
                <select asp-for="TheaterId" class="form-select" asp-items="ViewBag.TheaterId">
                    <option value="">Chọn rạp chiếu...</option>
                </select>
                <span asp-validation-for="TheaterId" class="text-danger small"></span>
            </div>
            
            <div class="col-md-6">
                <label asp-for="SeatCode" class="form-label">
                    <i class="fas fa-hashtag me-1"></i>Mã ghế <span class="text-danger">*</span>
                </label>
                <input asp-for="SeatCode" class="form-control" placeholder="VD: A1, B2, C3..." />
                <span asp-validation-for="SeatCode" class="text-danger small"></span>
                <div class="form-text">Nhập mã ghế (VD: A1, B2, C3...)</div>
            </div>
            
            <div class="col-md-6">
                <label asp-for="SeatType" class="form-label">
                    <i class="fas fa-tag me-1"></i>Loại ghế <span class="text-danger">*</span>
                </label>
                <select asp-for="SeatType" class="form-select">
                    <option value="thuong">Ghế thường</option>
                    <option value="vip">Ghế VIP</option>
                </select>
                <span asp-validation-for="SeatType" class="text-danger small"></span>
                <div class="form-text">Chọn loại ghế phù hợp</div>
            </div>
            
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="fas fa-info-circle me-2 text-warning"></i>Lưu ý khi chỉnh sửa ghế
                        </h6>
                        <ul class="mb-0">
                            <li>Mã ghế phải là duy nhất trong cùng một rạp</li>
                            <li>Thay đổi loại ghế có thể ảnh hưởng đến giá vé</li>
                            <li>Kiểm tra trùng lặp mã ghế trước khi lưu</li>
                            <li>Đảm bảo ghế được gán đúng rạp chiếu</li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <div class="col-12">
                <hr class="my-4">
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Hủy bỏ
                    </a>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save me-2"></i>Lưu thay đổi
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
