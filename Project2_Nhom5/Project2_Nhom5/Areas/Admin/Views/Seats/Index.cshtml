@model IEnumerable<Project2_Nhom5.Models.Seat>

@{
    ViewData["Title"] = "Quản lý Ghế ngồi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-chair me-2 text-primary"></i>Quản lý Ghế ngồi
        </h2>
        <p class="text-muted mb-0">Danh sách tất cả ghế ngồi trong hệ thống</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Thêm ghế mới
    </a>
</div>

@if (!Model.Any())
{
    <div class="card-dashboard p-5 text-center">
        <i class="fas fa-chair fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">Chưa có ghế nào</h4>
        <p class="text-muted">Bắt đầu bằng cách thêm ghế đầu tiên vào hệ thống</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Thêm ghế đầu tiên
        </a>
    </div>
}
else
{
    <div class="card-dashboard">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>
                            <i class="fas fa-hashtag me-1"></i>Mã ghế
                        </th>
                        <th>
                            <i class="fas fa-tag me-1"></i>Loại ghế
                        </th>
                        <th>
                            <i class="fas fa-building me-1"></i>Rạp chiếu
                        </th>
                        <th class="text-center">
                            <i class="fas fa-cogs me-1"></i>Thao tác
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary text-white icon-circle me-3">
                                        <i class="fas fa-chair"></i>
                                    </div>
                                    <div>
                                        <strong>@Html.DisplayFor(modelItem => item.SeatCode)</strong>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @{
                                    var seatTypeClass = item.SeatType switch
                                    {
                                        "vip" => "bg-warning",
                                        "thuong" => "bg-info",
                                        "couple" => "bg-success",
                                        _ => "bg-secondary"
                                    };
                                    var seatTypeText = item.SeatType switch
                                    {
                                        "vip" => "VIP",
                                        "thuong" => "Thường",
                                        "couple" => "Couple",
                                        _ => item.SeatType
                                    };
                                }
                                <span class="badge @seatTypeClass">
                                    <i class="fas fa-tag me-1"></i>@seatTypeText
                                </span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-success text-white icon-circle me-3">
                                        <i class="fas fa-building"></i>
                                    </div>
                                    <div>
                                        <strong>@(item.Theater?.Name ?? "N/A")</strong>
                                        @if (item.Theater != null)
                                        {
                                            <br><small class="text-muted">@item.Theater.Location - Phòng @item.Theater.RoomNumber</small>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.SeatId" class="btn btn-sm btn-outline-info" title="Chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.SeatId" class="btn btn-sm btn-outline-warning" title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.SeatId" class="btn btn-sm btn-outline-danger" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
