@model Project2_Nhom5.Models.Revenue

@{
    ViewData["Title"] = "Thêm Báo cáo Doanh thu Mới";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-plus-circle me-2 text-success"></i>Thêm Báo cáo Doanh thu Mới
        </h2>
        <p class="text-muted mb-0">Tạo báo cáo doanh thu mới cho lịch chiếu</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
</div>

<div class="card-dashboard">
    <div class="card-body p-4">
        <form asp-action="Create" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <div class="col-md-6">
                <label asp-for="ShowtimeId" class="form-label">
                    <i class="fas fa-film me-1"></i>Lịch chiếu <span class="text-danger">*</span>
                </label>
                <select asp-for="ShowtimeId" class="form-select" asp-items="ViewBag.ShowtimeId">
                    <option value="">Chọn lịch chiếu...</option>
                </select>
                <span asp-validation-for="ShowtimeId" class="text-danger small"></span>
                <div class="form-text">Chọn lịch chiếu để tạo báo cáo doanh thu</div>
            </div>
            
            <div class="col-md-6">
                <label asp-for="TotalAmount" class="form-label">
                    <i class="fas fa-dollar-sign me-1"></i>Tổng doanh thu <span class="text-danger">*</span>
                </label>
                <div class="input-group">
                    <input asp-for="TotalAmount" class="form-control" type="number" min="0" step="1000" placeholder="Nhập tổng doanh thu..." />
                    <span class="input-group-text">VNĐ</span>
                </div>
                <span asp-validation-for="TotalAmount" class="text-danger small"></span>
                <div class="form-text">Nhập tổng doanh thu từ lịch chiếu này</div>
            </div>
            
            <div class="col-md-6">
                <label asp-for="AgencyCommission" class="form-label">
                    <i class="fas fa-percent me-1"></i>Hoa hồng đại lý (%) <span class="text-danger">*</span>
                </label>
                <div class="input-group">
                    <input asp-for="AgencyCommission" class="form-control" type="number" min="0" max="100" step="0.1" placeholder="Nhập phần trăm hoa hồng..." />
                    <span class="input-group-text">%</span>
                </div>
                <span asp-validation-for="AgencyCommission" class="text-danger small"></span>
                <div class="form-text">Nhập phần trăm hoa hồng cho đại lý (0-100%)</div>
            </div>
            
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="fas fa-info-circle me-2 text-success"></i>Hướng dẫn tạo báo cáo doanh thu
                        </h6>
                        <ul class="mb-0">
                            <li>Chọn lịch chiếu đã hoàn thành để tạo báo cáo</li>
                            <li>Nhập tổng doanh thu chính xác từ lịch chiếu</li>
                            <li>Đặt hoa hồng đại lý phù hợp với hợp đồng</li>
                            <li>Hệ thống sẽ tự động tính doanh thu thực tế</li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <div class="col-12">
                <hr class="my-4">
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Hủy bỏ
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-2"></i>Tạo báo cáo
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
