@model Project2_Nhom5.Models.Revenue

@{
    ViewData["Title"] = "Xóa Báo cáo Doanh thu";
    var actualRevenue = (decimal)((Model.TotalAmount ?? 0) - ((Model.TotalAmount ?? 0) * (Model.AgencyCommission ?? 0) / 100));
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-trash me-2 text-danger"></i>Xóa Báo cáo Doanh thu
        </h2>
        <p class="text-muted mb-0">Xác nhận xóa báo cáo #@Model.RevenueId.ToString("000000")</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
</div>

<div class="card-dashboard">
    <div class="card-body p-4">
        <div class="alert alert-danger" role="alert">
            <div class="d-flex align-items-center">
                <div class="bg-danger text-white icon-circle me-3">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div>
                    <h5 class="alert-heading mb-1">Cảnh báo!</h5>
                    <p class="mb-0">Bạn có chắc chắn muốn xóa báo cáo doanh thu này? Hành động này không thể hoàn tác.</p>
                </div>
            </div>
        </div>
        
        <div class="row g-4">
            <div class="col-md-6">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-success text-white icon-circle me-3">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Tổng doanh thu</h6>
                        <h4 class="text-success mb-0">@(Model.TotalAmount?.ToString("N0") ?? "0") VNĐ</h4>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-info text-white icon-circle me-3">
                        <i class="fas fa-percent"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Hoa hồng đại lý</h6>
                        <h4 class="text-info mb-0">@(Model.AgencyCommission?.ToString("F1") ?? "0")%</h4>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-warning text-white icon-circle me-3">
                        <i class="fas fa-calculator"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Doanh thu thực tế</h6>
                        <h4 class="text-warning mb-0">@actualRevenue.ToString("N0") VNĐ</h4>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-primary text-white icon-circle me-3">
                        <i class="fas fa-film"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Lịch chiếu</h6>
                        <h4 class="text-primary mb-0">#@Model.ShowtimeId.ToString().PadLeft(6, '0')</h4>
                    </div>
                </div>
            </div>
        </div>
        
        @if (Model.Showtime != null)
        {
            <hr class="my-4">
            <h6 class="mb-3">
                <i class="fas fa-info-circle me-2 text-primary"></i>Thông tin lịch chiếu
            </h6>
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label text-muted">Phim</label>
                    <div class="fw-bold">@Model.Showtime.Movie?.Title</div>
                </div>
                <div class="col-md-6">
                    <label class="form-label text-muted">Ngày chiếu</label>
                    <div class="fw-bold">@Model.Showtime.ShowDate.ToString("dd/MM/yyyy")</div>
                </div>
            </div>
        }
        
        <hr class="my-4">
        <form asp-action="Delete" class="d-flex justify-content-end gap-2">
            <input type="hidden" asp-for="RevenueId" />
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-times me-2"></i>Hủy bỏ
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash me-2"></i>Xác nhận xóa
            </button>
        </form>
    </div>
</div>
