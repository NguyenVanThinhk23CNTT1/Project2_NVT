@model Project2_Nhom5.Models.Theater

@{
    ViewData["Title"] = "Chi tiết Rạp chiếu";
}

<div class="d-flex justify-content-between align-items-center mb-4">
<div>
        <h2 class="mb-1">
            <i class="fas fa-eye me-2 text-info"></i>Chi tiết Rạp chiếu
        </h2>
        <p class="text-muted mb-0">Thông tin chi tiết về rạp chiếu: @(Model?.Name ?? "N/A")</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model?.TheaterId" class="btn btn-warning">
            <i class="fas fa-edit me-2"></i>Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card-dashboard">
            <div class="card-body text-center p-4">
                <div class="bg-primary text-white icon-circle-lg mx-auto mb-3">
                    <i class="fas fa-building fa-2x"></i>
                </div>
                <h4 class="mb-2">@Model.Name</h4>
                <span class="badge bg-info mb-2">Phòng @Model.RoomNumber</span>
                <span class="badge bg-success">@Model.Location</span>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="card-dashboard">
            <div class="card-body p-4">
                <h5 class="card-title mb-4">
                    <i class="fas fa-info-circle me-2 text-primary"></i>Thông tin chi tiết
                </h5>
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-primary text-white icon-circle me-3">
                                <i class="fas fa-building"></i>
                            </div>
                            <div>
                                <small class="text-muted">Tên rạp chiếu</small>
                                <div class="fw-bold">@Model.Name</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-info text-white icon-circle me-3">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div>
                                <small class="text-muted">Địa điểm</small>
                                <div class="fw-bold">@Model.Location</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-warning text-white icon-circle me-3">
                                <i class="fas fa-door-open"></i>
                            </div>
                            <div>
                                <small class="text-muted">Số phòng chiếu</small>
                                <div class="fw-bold">Phòng @Model.RoomNumber</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-success text-white icon-circle me-3">
                                <i class="fas fa-hashtag"></i>
</div>
<div>
                                <small class="text-muted">Mã rạp</small>
                                <div class="fw-bold">#@Model.TheaterId.ToString("000000")</div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="mt-4">
                    <h6 class="mb-3">
                        <i class="fas fa-calendar-alt me-2 text-primary"></i>Thông tin bổ sung
                    </h6>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-film fa-2x text-primary mb-2"></i>
                                    <h6>Lịch chiếu</h6>
                                    <p class="mb-0 text-muted">Xem lịch chiếu của rạp này</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-chair fa-2x text-success mb-2"></i>
                                    <h6>Ghế ngồi</h6>
                                    <p class="mb-0 text-muted">Quản lý ghế ngồi trong rạp</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
