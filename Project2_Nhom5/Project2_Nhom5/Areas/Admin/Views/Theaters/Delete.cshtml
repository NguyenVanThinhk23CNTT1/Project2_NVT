@model Project2_Nhom5.Models.Theater

@{
    ViewData["Title"] = "Xóa Rạp chiếu";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-trash me-2 text-danger"></i>Xóa Rạp chiếu
        </h2>
        <p class="text-muted mb-0">Xác nhận xóa rạp chiếu khỏi hệ thống</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card-dashboard border-danger">
            <div class="card-body text-center p-4">
                <div class="bg-danger text-white icon-circle-lg mx-auto mb-3">
                    <i class="fas fa-exclamation-triangle fa-2x"></i>
                </div>
                <h4 class="text-danger mb-2">Cảnh báo!</h4>
                <p class="text-muted">Bạn sắp xóa rạp chiếu này khỏi hệ thống. Hành động này không thể hoàn tác.</p>
                
                <div class="bg-light rounded p-3 mb-3">
                    <i class="fas fa-building fa-3x text-primary mb-2"></i>
                    <h5 class="mb-2">@Model.Name</h5>
                    <span class="badge bg-info mb-2">Phòng @Model.RoomNumber</span>
                    <span class="badge bg-secondary">@Model.Location</span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="card-dashboard">
            <div class="card-body p-4">
                <h5 class="card-title mb-4">
                    <i class="fas fa-info-circle me-2 text-primary"></i>Thông tin rạp chiếu sẽ bị xóa
                </h5>
                
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Lưu ý:</strong> Việc xóa rạp chiếu này sẽ ảnh hưởng đến các lịch chiếu và ghế ngồi liên quan.
                </div>
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-primary text-white icon-circle me-3">
                                <i class="fas fa-building"></i>
                            </div>
                            <div>
                                <small class="text-muted">Tên rạp chiếu</small>
                                <div class="fw-bold">@Model.Name</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-info text-white icon-circle me-3">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div>
                                <small class="text-muted">Địa điểm</small>
                                <div class="fw-bold">@Model.Location</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-warning text-white icon-circle me-3">
                                <i class="fas fa-door-open"></i>
                            </div>
                            <div>
                                <small class="text-muted">Số phòng chiếu</small>
                                <div class="fw-bold">Phòng @Model.RoomNumber</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-success text-white icon-circle me-3">
                                <i class="fas fa-hashtag"></i>
                            </div>
                            <div>
                                <small class="text-muted">Mã rạp</small>
                                <div class="fw-bold">#@Model.TheaterId.ToString("000000")</div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="mt-4">
                    <h6 class="mb-3">
                        <i class="fas fa-exclamation-triangle me-2 text-warning"></i>Ảnh hưởng khi xóa
                    </h6>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="card bg-light border-warning">
                                <div class="card-body text-center">
                                    <i class="fas fa-calendar-times fa-2x text-warning mb-2"></i>
                                    <h6>Lịch chiếu</h6>
                                    <p class="mb-0 text-muted">Tất cả lịch chiếu trong rạp này sẽ bị xóa</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light border-warning">
                                <div class="card-body text-center">
                                    <i class="fas fa-chair fa-2x text-warning mb-2"></i>
                                    <h6>Ghế ngồi</h6>
                                    <p class="mb-0 text-muted">Tất cả ghế ngồi trong rạp này sẽ bị xóa</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    
                <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="TheaterId" />
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Hủy bỏ
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Xác nhận xóa
                        </button>
                    </div>
    </form>
            </div>
        </div>
    </div>
</div>
