@model IEnumerable<Project2_Nhom5.Models.Theater>

@{
    ViewData["Title"] = "Quản lý Rạp chiếu";
    ViewData["Icon"] = "fas fa-building";
    ViewData["Description"] = "Danh sách tất cả rạp chiếu phim trong hệ thống";
    ViewData["EmptyMessage"] = "Chưa có rạp chiếu nào";
    ViewData["EmptyDescription"] = "Bắt đầu bằng cách thêm rạp chiếu đầu tiên vào hệ thống";
    ViewData["CreateButtonText"] = "Thêm rạp chiếu đầu tiên";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-building me-2 text-primary"></i>Quản lý Rạp chiếu
        </h2>
        <p class="text-muted mb-0">Danh sách tất cả rạp chiếu phim trong hệ thống</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Thêm rạp chiếu mới
    </a>
</div>

@if (!Model.Any())
{
    <div class="card-dashboard p-5 text-center">
        <i class="fas fa-building fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">Chưa có rạp chiếu nào</h4>
        <p class="text-muted">Bắt đầu bằng cách thêm rạp chiếu đầu tiên vào hệ thống</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Thêm rạp chiếu đầu tiên
        </a>
    </div>
}
else
{
    <div class="card-dashboard">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>
                            <i class="fas fa-building me-1"></i>Tên rạp
                        </th>
                        <th>
                            <i class="fas fa-map-marker-alt me-1"></i>Địa điểm
                        </th>
                        <th>
                            <i class="fas fa-door-open me-1"></i>Số phòng
                        </th>
                        <th class="text-center">
                            <i class="fas fa-cogs me-1"></i>Thao tác
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary text-white rounded-circle p-2 me-3">
                                        <i class="fas fa-building"></i>
                                    </div>
                                    <div>
                                        <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-info">
                                    <i class="fas fa-map-marker-alt me-1"></i>@Html.DisplayFor(modelItem => item.Location)
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-secondary">
                                    <i class="fas fa-door-open me-1"></i>Phòng @Html.DisplayFor(modelItem => item.RoomNumber)
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.TheaterId" class="btn btn-sm btn-outline-info" title="Chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.TheaterId" class="btn btn-sm btn-outline-warning" title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.TheaterId" class="btn btn-sm btn-outline-danger" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
