@model IEnumerable<Project2_Nhom5.Models.Theater>

@{
    ViewData["Title"] = "Quản lý Rạp chiếu";
    var searchTerm = ViewBag.Search?.ToString() ?? "";
    var sortOrder = ViewBag.SortOrder?.ToString() ?? "";
    var currentSort = ViewBag.CurrentSort?.ToString() ?? "";
    var page = ViewBag.CurrentPage?.ToString() ?? "1";
    var pageSize = ViewBag.PageSize?.ToString() ?? "10";
    var locationFilter = ViewBag.Location?.ToString() ?? "";
    var totalCount = ViewBag.TotalCount ?? 0;
    var totalPages = ViewBag.TotalPages ?? 1;
    var currentPageInt = int.Parse(page);
    var pageSizeInt = int.Parse(pageSize);
    var startItem = ((currentPageInt - 1) * pageSizeInt) + 1;
    var endItem = Math.Min(currentPageInt * pageSizeInt, totalCount);
    var locations = ViewBag.Locations as List<string> ?? new List<string>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-building me-2 text-primary"></i>Quản lý Rạp chiếu
        </h2>
        <p class="text-muted mb-0">Danh sách tất cả rạp chiếu phim trong hệ thống</p>
    </div>
    <a asp-action="Create" class="admin-btn-primary">
        <i class="fas fa-plus"></i>Thêm rạp chiếu mới
    </a>
</div>

<!-- Search and Filter Section -->
<div class="card-dashboard mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <label class="form-label">
                    <i class="fas fa-search"></i>Tìm kiếm
                </label>
                <input type="text" name="search" class="form-control" placeholder="Tìm theo tên rạp, địa điểm, số phòng..." value="@searchTerm">
            </div>
            <div class="col-md-4">
                <label class="form-label">
                    <i class="fas fa-map-marker-alt"></i>Địa điểm
                </label>
                <select name="location" class="form-select">
                    <option value="">Tất cả địa điểm</option>
                    @foreach (var location in locations)
                    {
                        if (locationFilter == location)
                        {
                            <option value="@location" selected>@location</option>
                        }
                        else
                        {
                            <option value="@location">@location</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">
                    <i class="fas fa-list"></i>Số dòng
                </label>
                <select name="pageSize" class="form-select">
                    @if (pageSize == "10")
                    {
                        <option value="10" selected>10</option>
                    }
                    else
                    {
                        <option value="10">10</option>
                    }
                    @if (pageSize == "25")
                    {
                        <option value="25" selected>25</option>
                    }
                    else
                    {
                        <option value="25">25</option>
                    }
                    @if (pageSize == "50")
                    {
                        <option value="50" selected>50</option>
                    }
                    else
                    {
                        <option value="50">50</option>
                    }
                    @if (pageSize == "100")
                    {
                        <option value="100" selected>100</option>
                    }
                    else
                    {
                        <option value="100">100</option>
                    }
                </select>
            </div>
            <div class="col-12">
                <div class="d-flex gap-2">
                    <button type="submit" class="admin-btn-primary">
                        <i class="fas fa-search"></i>Tìm kiếm
                    </button>
                    <a asp-action="Index" class="admin-btn-secondary">
                        <i class="fas fa-refresh"></i>Làm mới
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <div class="card-dashboard p-5 text-center">
        <i class="fas fa-building fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">Chưa có rạp chiếu nào</h4>
        <p class="text-muted">Bắt đầu bằng cách thêm rạp chiếu đầu tiên vào hệ thống</p>
        <a asp-action="Create" class="admin-btn-primary">
            <i class="fas fa-plus"></i>Thêm rạp chiếu đầu tiên
        </a>
    </div>
}
else
{
    <div class="card-dashboard">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = searchTerm, 
                                location = locationFilter, 
                                pageSize = pageSize,
                                sortOrder = currentSort == "name" && sortOrder == "asc" ? "desc" : "asc",
                                currentSort = "name"
                            })" class="text-decoration-none text-dark">
                                <i class="fas fa-building"></i>Tên rạp
                                @if (currentSort == "name")
                                {
                                    <i class="fas fa-sort-@(sortOrder == "asc" ? "up" : "down") ms-1"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = searchTerm, 
                                location = locationFilter, 
                                pageSize = pageSize,
                                sortOrder = currentSort == "location" && sortOrder == "asc" ? "desc" : "asc",
                                currentSort = "location"
                            })" class="text-decoration-none text-dark">
                                <i class="fas fa-map-marker-alt"></i>Địa điểm
                                @if (currentSort == "location")
                                {
                                    <i class="fas fa-sort-@(sortOrder == "asc" ? "up" : "down") ms-1"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = searchTerm, 
                                location = locationFilter, 
                                pageSize = pageSize,
                                sortOrder = currentSort == "roomNumber" && sortOrder == "asc" ? "desc" : "asc",
                                currentSort = "roomNumber"
                            })" class="text-decoration-none text-dark">
                                <i class="fas fa-door-open"></i>Số phòng
                                @if (currentSort == "roomNumber")
                                {
                                    <i class="fas fa-sort-@(sortOrder == "asc" ? "up" : "down") ms-1"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                }
                            </a>
                        </th>
                        <th class="text-center">
                            <i class="fas fa-cogs"></i>Thao tác
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary text-white icon-circle me-3">
                                        <i class="fas fa-building"></i>
                                    </div>
                                    <div>
                                        <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-info">
                                    <i class="fas fa-map-marker-alt"></i>@Html.DisplayFor(modelItem => item.Location)
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-secondary">
                                    <i class="fas fa-door-open"></i>Phòng @Html.DisplayFor(modelItem => item.RoomNumber)
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.TheaterId" class="admin-btn-secondary" style="padding: 6px 12px; font-size: 0.8rem; min-width: 35px; justify-content: center;" title="Chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.TheaterId" class="admin-btn-success" style="padding: 6px 12px; font-size: 0.8rem; min-width: 35px; justify-content: center;" title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.TheaterId" class="admin-btn-danger" style="padding: 6px 12px; font-size: 0.8rem; min-width: 35px; justify-content: center;" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <!-- Pagination -->
    <div class="d-flex justify-content-between align-items-center mt-4">
        <div class="text-muted">
            Hiển thị @startItem đến @endItem trong tổng số @totalCount rạp chiếu
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination mb-0">
                @if (currentPageInt > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            search = searchTerm, 
                            location = locationFilter, 
                            pageSize = pageSize,
                            sortOrder = sortOrder,
                            currentSort = currentSort,
                            page = currentPageInt - 1
                        })">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                }
                
                @for (int i = Math.Max(1, currentPageInt - 2); i <= Math.Min(totalPages, currentPageInt + 2); i++)
                {
                    <li class="page-item @(i == currentPageInt ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            search = searchTerm, 
                            location = locationFilter, 
                            pageSize = pageSize,
                            sortOrder = sortOrder,
                            currentSort = currentSort,
                            page = i
                        })">@i</a>
                    </li>
                }
                
                @if (currentPageInt < totalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            search = searchTerm, 
                            location = locationFilter, 
                            pageSize = pageSize,
                            sortOrder = sortOrder,
                            currentSort = currentSort,
                            page = currentPageInt + 1
                        })">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-submit form when pageSize changes
            $('select[name="pageSize"]').change(function() {
                $(this).closest('form').submit();
            });
            
            // Clear search when clicking refresh
            $('a[href*="Index"]').click(function() {
                if ($(this).text().includes('Làm mới')) {
                    $(this).attr('href', '@Url.Action("Index")');
                }
            });
        });
    </script>
}



