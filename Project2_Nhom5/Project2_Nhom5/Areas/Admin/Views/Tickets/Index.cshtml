@model IEnumerable<Project2_Nhom5.Models.Ticket>

@{
    ViewData["Title"] = "Quản lý Vé xem phim";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-ticket-alt me-2 text-primary"></i>Quản lý Vé xem phim
        </h2>
        <p class="text-muted mb-0">Danh sách tất cả vé xem phim trong hệ thống</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Thêm vé mới
    </a>
</div>

@if (!Model.Any())
{
    <div class="card-dashboard p-5 text-center">
        <i class="fas fa-ticket-alt fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">Chưa có vé nào</h4>
        <p class="text-muted">Bắt đầu bằng cách thêm vé đầu tiên vào hệ thống</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Thêm vé đầu tiên
        </a>
    </div>
}
else
{
    <div class="card-dashboard">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>
                            <i class="fas fa-hashtag me-1"></i>Mã vé
                        </th>
                        <th>
                            <i class="fas fa-dollar-sign me-1"></i>Giá vé
                        </th>
                        <th>
                            <i class="fas fa-info-circle me-1"></i>Trạng thái
                        </th>
                        <th>
                            <i class="fas fa-chair me-1"></i>Ghế
                        </th>
                        <th>
                            <i class="fas fa-calendar me-1"></i>Lịch chiếu
                        </th>
                        <th>
                            <i class="fas fa-user me-1"></i>Khách hàng
                        </th>
                        <th class="text-center">
                            <i class="fas fa-cogs me-1"></i>Thao tác
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary text-white icon-circle me-3">
                                        <i class="fas fa-ticket-alt"></i>
                                    </div>
                                    <div>
                                        <strong>#@item.TicketId.ToString("000000")</strong>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-success">
                                    <i class="fas fa-dollar-sign me-1"></i>@item.Price.ToString("N0") VNĐ
                                </span>
                            </td>
                            <td>
                                @{
                                    var statusClass = item.Status switch
                                    {
                                        "pending" => "bg-warning",
                                        "paid" => "bg-success",
                                        "canceled" => "bg-danger",
                                        _ => "bg-info"
                                    };
                                    var statusText = item.Status switch
                                    {
                                        "pending" => "Chờ xử lý",
                                        "paid" => "Đã thanh toán",
                                        "canceled" => "Đã hủy",
                                        _ => item.Status
                                    };
                                }
                                <span class="badge @statusClass">@statusText</span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-warning text-white icon-circle me-3">
                                        <i class="fas fa-chair"></i>
                                    </div>
                                    <div>
                                        <strong>@(item.Seat?.SeatCode ?? "N/A")</strong>
                                        @if (item.Seat != null)
                                        {
                                            <br><small class="text-muted">@item.Seat.SeatType</small>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-info text-white icon-circle me-3">
                                        <i class="fas fa-calendar"></i>
                                    </div>
                                    <div>
                                        @if (item.Showtime != null)
                                        {
                                            <strong>@(item.Showtime.Movie?.Title ?? "Phim chưa xác định")</strong>
                                            <br><small class="text-muted">@item.Showtime.ShowDate.ToString("dd/MM/yyyy") @item.Showtime.ShowTime.ToString("HH:mm")</small>
                                        }
                                        else
                                        {
                                            <strong class="text-muted">Chưa có lịch chiếu</strong>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-secondary text-white icon-circle me-3">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div>
                                        <strong>@(item.User?.Username ?? "N/A")</strong>
                                        @if (item.User != null)
                                        {
                                            <br><small class="text-muted">@item.User.Email</small>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.TicketId" class="btn btn-sm btn-outline-info" title="Chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.TicketId" class="btn btn-sm btn-outline-warning" title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.TicketId" class="btn btn-sm btn-outline-danger" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
