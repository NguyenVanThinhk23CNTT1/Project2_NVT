@model IEnumerable<Project2_Nhom5.Models.Ticket>

@{
    ViewData["Title"] = "Quản lý Vé xem phim";
    var searchTerm = ViewBag.Search?.ToString() ?? "";
    var sortOrder = ViewBag.SortOrder?.ToString() ?? "";
    var currentSort = ViewBag.CurrentSort?.ToString() ?? "";
    var page = ViewBag.CurrentPage?.ToString() ?? "1";
    var pageSize = ViewBag.PageSize?.ToString() ?? "10";
    var statusFilter = ViewBag.Status?.ToString() ?? "";
    var userIdFilter = ViewBag.UserId?.ToString() ?? "";
    var showtimeIdFilter = ViewBag.ShowtimeId?.ToString() ?? "";
    var totalCount = ViewBag.TotalCount ?? 0;
    var totalPages = ViewBag.TotalPages ?? 1;
    var currentPageInt = int.Parse(page);
    var pageSizeInt = int.Parse(pageSize);
    var startItem = ((currentPageInt - 1) * pageSizeInt) + 1;
    var endItem = Math.Min(currentPageInt * pageSizeInt, totalCount);
    var users = ViewBag.Users as List<Project2_Nhom5.Models.User> ?? new List<Project2_Nhom5.Models.User>();
    var showtimes = ViewBag.Showtimes as List<Project2_Nhom5.Models.Showtime> ?? new List<Project2_Nhom5.Models.Showtime>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-ticket-alt me-2 text-primary"></i>Quản lý Vé xem phim
        </h2>
        <p class="text-muted mb-0">Danh sách tất cả vé xem phim trong hệ thống</p>
    </div>
    <a asp-action="Create" class="admin-btn-primary">
        <i class="fas fa-plus"></i>Thêm vé mới
    </a>
</div>

<!-- Search and Filter Section -->
<div class="card-dashboard mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">
                    <i class="fas fa-search"></i>Tìm kiếm
                </label>
                <input type="text" name="search" class="form-control" placeholder="Tìm theo tên KH, email, phim, rạp..." value="@searchTerm">
            </div>
            <div class="col-md-2">
                <label class="form-label">
                    <i class="fas fa-toggle-on"></i>Trạng thái
                </label>
                <select name="status" class="form-select">
                    <option value="">Tất cả trạng thái</option>
                    @if (statusFilter == "choxuly")
                    {
                        <option value="choxuly" selected>Chờ xử lý</option>
                    }
                    else
                    {
                        <option value="choxuly">Chờ xử lý</option>
                    }
                    @if (statusFilter == "dathanhtoan")
                    {
                        <option value="dathanhtoan" selected>Đã thanh toán</option>
                    }
                    else
                    {
                        <option value="dathanhtoan">Đã thanh toán</option>
                    }
                    @if (statusFilter == "dahuy")
                    {
                        <option value="dahuy" selected>Đã hủy</option>
                    }
                    else
                    {
                        <option value="dahuy">Đã hủy</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">
                    <i class="fas fa-user"></i>Khách hàng
                </label>
                <select name="userId" class="form-select">
                    <option value="">Tất cả khách hàng</option>
                    @foreach (var user in users)
                    {
                        if (userIdFilter == user.UserId.ToString())
                        {
                            <option value="@user.UserId" selected>@user.Username</option>
                        }
                        else
                        {
                            <option value="@user.UserId">@user.Username</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">
                    <i class="fas fa-calendar"></i>Lịch chiếu
                </label>
                <select name="showtimeId" class="form-select">
                    <option value="">Tất cả lịch chiếu</option>
                    @foreach (var showtime in showtimes)
                    {
                        var displayText = $"{showtime.Movie?.Title} - {showtime.ShowDate:dd/MM/yyyy} {showtime.ShowTime:HH:mm}";
                        if (showtimeIdFilter == showtime.ShowtimeId.ToString())
                        {
                            <option value="@showtime.ShowtimeId" selected>@displayText</option>
                        }
                        else
                        {
                            <option value="@showtime.ShowtimeId">@displayText</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">
                    <i class="fas fa-list"></i>Số dòng
                </label>
                <select name="pageSize" class="form-select">
                    @if (pageSize == "10")
                    {
                        <option value="10" selected>10</option>
                    }
                    else
                    {
                        <option value="10">10</option>
                    }
                    @if (pageSize == "25")
                    {
                        <option value="25" selected>25</option>
                    }
                    else
                    {
                        <option value="25">25</option>
                    }
                    @if (pageSize == "50")
                    {
                        <option value="50" selected>50</option>
                    }
                    else
                    {
                        <option value="50">50</option>
                    }
                    @if (pageSize == "100")
                    {
                        <option value="100" selected>100</option>
                    }
                    else
                    {
                        <option value="100">100</option>
                    }
                </select>
            </div>
            <div class="col-md-1">
                <label class="form-label">&nbsp;</label>
                <div class="d-flex gap-2">
                    <button type="submit" class="admin-btn-primary">
                        <i class="fas fa-search"></i>
                    </button>
                    <a asp-action="Index" class="admin-btn-secondary">
                        <i class="fas fa-refresh"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <div class="card-dashboard p-5 text-center">
        <i class="fas fa-ticket-alt fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">Chưa có vé nào</h4>
        <p class="text-muted">Bắt đầu bằng cách thêm vé đầu tiên vào hệ thống</p>
        <a asp-action="Create" class="admin-btn-primary">
            <i class="fas fa-plus"></i>Thêm vé đầu tiên
        </a>
    </div>
}
else
{
    <div class="card-dashboard">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>
                            <i class="fas fa-hashtag"></i>Mã vé
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = searchTerm, 
                                status = statusFilter, 
                                userId = userIdFilter, 
                                showtimeId = showtimeIdFilter,
                                pageSize = pageSize,
                                sortOrder = currentSort == "price" && sortOrder == "asc" ? "desc" : "asc",
                                currentSort = "price"
                            })" class="text-decoration-none text-dark">
                                <i class="fas fa-dollar-sign"></i>Giá vé
                                @if (currentSort == "price")
                                {
                                    <i class="fas fa-sort-@(sortOrder == "asc" ? "up" : "down") ms-1"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = searchTerm, 
                                status = statusFilter, 
                                userId = userIdFilter, 
                                showtimeId = showtimeIdFilter,
                                pageSize = pageSize,
                                sortOrder = currentSort == "status" && sortOrder == "asc" ? "desc" : "asc",
                                currentSort = "status"
                            })" class="text-decoration-none text-dark">
                                <i class="fas fa-info-circle"></i>Trạng thái
                                @if (currentSort == "status")
                                {
                                    <i class="fas fa-sort-@(sortOrder == "asc" ? "up" : "down") ms-1"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <i class="fas fa-chair"></i>Ghế
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = searchTerm, 
                                status = statusFilter, 
                                userId = userIdFilter, 
                                showtimeId = showtimeIdFilter,
                                pageSize = pageSize,
                                sortOrder = currentSort == "movie" && sortOrder == "asc" ? "desc" : "asc",
                                currentSort = "movie"
                            })" class="text-decoration-none text-dark">
                                <i class="fas fa-calendar"></i>Lịch chiếu
                                @if (currentSort == "movie")
                                {
                                    <i class="fas fa-sort-@(sortOrder == "asc" ? "up" : "down") ms-1"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = searchTerm, 
                                status = statusFilter, 
                                userId = userIdFilter, 
                                showtimeId = showtimeIdFilter,
                                pageSize = pageSize,
                                sortOrder = currentSort == "user" && sortOrder == "asc" ? "desc" : "asc",
                                currentSort = "user"
                            })" class="text-decoration-none text-dark">
                                <i class="fas fa-user"></i>Khách hàng
                                @if (currentSort == "user")
                                {
                                    <i class="fas fa-sort-@(sortOrder == "asc" ? "up" : "down") ms-1"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort ms-1 text-muted"></i>
                                }
                            </a>
                        </th>
                        <th class="text-center">
                            <i class="fas fa-cogs"></i>Thao tác
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary text-white icon-circle me-3">
                                        <i class="fas fa-ticket-alt"></i>
                                    </div>
                                    <div>
                                        <strong>#@item.TicketId.ToString("000000")</strong>
                                    </div>
                                </div>
                            </td>
                            <td>
                                                                    <span class="badge bg-success">
                                        <i class="fas fa-dollar-sign"></i>@item.Price.ToString("N0") VNĐ
                                    </span>
                            </td>
                            <td>
                                @{
                                    var statusClass = item.Status switch
                                    {
                                        "choxuly" => "bg-warning",
                                        "dathanhtoan" => "bg-success",
                                        "dahuy" => "bg-danger",
                                        _ => "bg-info"
                                    };
                                    var statusText = item.Status switch
                                    {
                                        "choxuly" => "Chờ xử lý",
                                        "dathanhtoan" => "Đã thanh toán",
                                        "dahuy" => "Đã hủy",
                                        _ => item.Status
                                    };
                                }
                                <span class="badge @statusClass">@statusText</span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-warning text-white icon-circle me-3">
                                        <i class="fas fa-chair"></i>
                                    </div>
                                    <div>
                                        <strong>@(item.Seat?.SeatCode ?? "N/A")</strong>
                                        @if (item.Seat != null)
                                        {
                                            <br><small class="text-muted">@item.Seat.SeatType</small>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-info text-white icon-circle me-3">
                                        <i class="fas fa-calendar"></i>
                                    </div>
                                    <div>
                                        @if (item.Showtime != null)
                                        {
                                            <strong>@(item.Showtime.Movie?.Title ?? "Phim chưa xác định")</strong>
                                            <br><small class="text-muted">@item.Showtime.ShowDate.ToString("dd/MM/yyyy") @item.Showtime.ShowTime.ToString("HH:mm")</small>
                                        }
                                        else
                                        {
                                            <strong class="text-muted">Chưa có lịch chiếu</strong>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-secondary text-white icon-circle me-3">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div>
                                        <strong>@(item.User?.Username ?? "N/A")</strong>
                                        @if (item.User != null)
                                        {
                                            <br><small class="text-muted">@item.User.Email</small>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.TicketId" class="admin-btn-secondary" style="padding: 6px 12px; font-size: 0.8rem;" title="Chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.TicketId" class="admin-btn-success" style="padding: 6px 12px; font-size: 0.8rem;" title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.TicketId" class="admin-btn-danger" style="padding: 6px 12px; font-size: 0.8rem;" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <!-- Pagination -->
    <div class="d-flex justify-content-between align-items-center mt-4">
        <div class="text-muted">
            Hiển thị @startItem đến @endItem trong tổng số @totalCount vé
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination mb-0">
                @if (currentPageInt > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            search = searchTerm, 
                            status = statusFilter, 
                            userId = userIdFilter, 
                            showtimeId = showtimeIdFilter,
                            pageSize = pageSize,
                            sortOrder = sortOrder,
                            currentSort = currentSort,
                            page = currentPageInt - 1
                        })">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                }
                
                @for (int i = Math.Max(1, currentPageInt - 2); i <= Math.Min(totalPages, currentPageInt + 2); i++)
                {
                    <li class="page-item @(i == currentPageInt ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            search = searchTerm, 
                            status = statusFilter, 
                            userId = userIdFilter, 
                            showtimeId = showtimeIdFilter,
                            pageSize = pageSize,
                            sortOrder = sortOrder,
                            currentSort = currentSort,
                            page = i
                        })">@i</a>
                    </li>
                }
                
                @if (currentPageInt < totalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            search = searchTerm, 
                            status = statusFilter, 
                            userId = userIdFilter, 
                            showtimeId = showtimeIdFilter,
                            pageSize = pageSize,
                            sortOrder = sortOrder,
                            currentSort = currentSort,
                            page = currentPageInt + 1
                        })">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-submit form when pageSize changes
            $('select[name="pageSize"]').change(function() {
                $(this).closest('form').submit();
            });
            
            // Clear search when clicking refresh
            $('a[href*="Index"]').click(function() {
                if ($(this).text().includes('Làm mới')) {
                    $(this).attr('href', '@Url.Action("Index")');
                }
            });
        });
    </script>
}



