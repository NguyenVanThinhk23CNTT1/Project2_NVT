@model Project2_Nhom5.Models.Ticket

@{
    ViewData["Title"] = "Chi tiết Vé xem phim";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-ticket-alt me-2 text-primary"></i>Chi tiết Vé xem phim
        </h2>
        <p class="text-muted mb-0">Thông tin chi tiết về vé xem phim trong hệ thống</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card-dashboard">
            <div class="card-body p-4">
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-success text-white icon-circle me-3">
                                <i class="fas fa-money-bill"></i>
                            </div>
                            <div>
                                <h6 class="mb-1 text-muted">Giá vé</h6>
                                <h5 class="mb-0 text-success">@Model.Price.ToString("N0") VNĐ</h5>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-info text-white icon-circle me-3">
                                <i class="fas fa-info-circle"></i>
                            </div>
                            <div>
                                <h6 class="mb-1 text-muted">Trạng thái</h6>
                                <h5 class="mb-0">
                                    @if (Model.Status == "pending")
                                    {
                                        <span class="badge bg-warning">Chờ xử lý</span>
                                    }
                                    else if (Model.Status == "confirmed")
                                    {
                                        <span class="badge bg-success">Đã xác nhận</span>
                                    }
                                    else if (Model.Status == "cancelled")
                                    {
                                        <span class="badge bg-danger">Đã hủy</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@Model.Status</span>
                                    }
                                </h5>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-primary text-white icon-circle me-3">
                                <i class="fas fa-chair"></i>
                            </div>
                            <div>
                                <h6 class="mb-1 text-muted">Ghế ngồi</h6>
                                <h5 class="mb-0">
                                    @if (Model.Seat != null)
                                    {
                                        <span>@Model.Seat.SeatCode</span>
                                        <br><small class="text-muted">
                                            @if (Model.Seat.SeatType == "thuong")
                                            {
                                                <span class="badge bg-secondary">Ghế thường</span>
                                            }
                                            else if (Model.Seat.SeatType == "vip")
                                            {
                                                <span class="badge bg-warning">Ghế VIP</span>
                                            }
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa được gán</span>
                                    }
                                </h5>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-warning text-white icon-circle me-3">
                                <i class="fas fa-calendar-alt"></i>
                            </div>
                            <div>
                                <h6 class="mb-1 text-muted">Lịch chiếu</h6>
                                <h5 class="mb-0">
                                    @if (Model.Showtime != null)
                                    {
                                        <span>@Model.Showtime.ShowDate.ToString("dd/MM/yyyy")</span>
                                        <br><small class="text-muted">@Model.Showtime.ShowTime.ToString("HH:mm")</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa được gán</span>
                                    }
                                </h5>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-12">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-secondary text-white icon-circle me-3">
                                <i class="fas fa-user"></i>
                            </div>
                            <div>
                                <h6 class="mb-1 text-muted">Khách hàng</h6>
                                <h5 class="mb-0">
                                    @if (Model.User != null)
                                    {
                                        <span>@Model.User.Username</span>
                                        <br><small class="text-muted">@Model.User.Email</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Khách vãng lai</span>
                                    }
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card-dashboard">
            <div class="card-body p-4">
                <h5 class="card-title mb-3">
                    <i class="fas fa-info-circle me-2 text-primary"></i>Thông tin bổ sung
                </h5>
                <div class="mb-3">
                    <small class="text-muted">ID Vé:</small>
                    <div class="fw-bold">@Model.TicketId</div>
                </div>
                <div class="mb-3">
                    <small class="text-muted">ID Ghế:</small>
                    <div class="fw-bold">@Model.SeatId</div>
                </div>
                <div class="mb-3">
                    <small class="text-muted">ID Lịch chiếu:</small>
                    <div class="fw-bold">@Model.ShowtimeId</div>
                </div>
                <div class="mb-3">
                    <small class="text-muted">ID Khách hàng:</small>
                    <div class="fw-bold">@(Model.UserId?.ToString() ?? "N/A")</div>
                </div>
            </div>
        </div>
        
        <div class="card-dashboard mt-3">
            <div class="card-body p-4">
                <h5 class="card-title mb-3">
                    <i class="fas fa-cogs me-2 text-warning"></i>Thao tác
                </h5>
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.TicketId" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Chỉnh sửa
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.TicketId" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Xóa vé
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-list me-2"></i>Danh sách vé
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
