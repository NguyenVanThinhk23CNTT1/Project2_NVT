@{
    ViewData["Title"] = "Debug Payment";
}

<div class="container mt-4">
    <h2>Debug Payment System</h2>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Database Debug</h5>
                </div>
                <div class="card-body">
                    <button class="btn btn-primary" id="debugDatabase">Check Database</button>
                    <div id="debugResult" class="mt-3"></div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Test Payment</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="testTicketId" class="form-label">Ticket ID</label>
                        <input type="number" class="form-control" id="testTicketId" value="1">
                    </div>
                    <div class="mb-3">
                        <label for="testAmount" class="form-label">Amount</label>
                        <input type="number" class="form-control" id="testAmount" value="75000">
                    </div>
                    <div class="mb-3">
                        <label for="testPaymentMethod" class="form-label">Payment Method</label>
                        <select class="form-select" id="testPaymentMethod">
                            <option value="momo">MoMo</option>
                            <option value="banking">Banking</option>
                            <option value="cash">Cash</option>
                        </select>
                    </div>
                    <button class="btn btn-success" id="testPayment">Test Create Payment</button>
                    <div id="testResult" class="mt-3"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Debug Database
            $('#debugDatabase').click(function() {
                $.ajax({
                    url: '@Url.Action("DebugDatabase", "Booking")',
                    type: 'GET',
                    success: function(response) {
                        $('#debugResult').html('<pre>' + JSON.stringify(response, null, 2) + '</pre>');
                    },
                    error: function(xhr) {
                        $('#debugResult').html('<div class="alert alert-danger">Error: ' + xhr.responseText + '</div>');
                    }
                });
            });

            // Test Payment
            $('#testPayment').click(function() {
                var request = {
                    ticketId: parseInt($('#testTicketId').val()),
                    amount: parseFloat($('#testAmount').val()),
                    paymentMethod: $('#testPaymentMethod').val()
                };

                $.ajax({
                    url: '@Url.Action("TestCreatePayment", "Booking")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(request),
                    success: function(response) {
                        $('#testResult').html('<div class="alert alert-success">Success: ' + JSON.stringify(response) + '</div>');
                    },
                    error: function(xhr) {
                        var errorResponse = xhr.responseJSON || { message: xhr.responseText };
                        $('#testResult').html('<div class="alert alert-danger">Error: ' + JSON.stringify(errorResponse) + '</div>');
                    }
                });
            });
        });
    </script>
}
